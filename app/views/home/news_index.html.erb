<div class="news-page">
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-content">
      <h1 class="hero-title">留学ニュース</h1>
      <p class="hero-subtitle">Study Abroad News</p>
      <div class="hero-divider"></div>
    </div>
  </section>

  <!-- Filter Section -->
  <section class="filter-section">
    <div class="filter-container">
      <div class="filter-buttons">
        <%= link_to news_index_path, class: "filter-btn #{params[:country].blank? ? 'active' : ''}" do %>
          すべて <span class="filter-count">(<%= @total_count %>)</span>
        <% end %>
        <% @countries.each do |country| %>
          <%= link_to news_index_path(country: country), class: "filter-btn #{params[:country] == country ? 'active' : ''}" do %>
            <%= country %> <span class="filter-count">(<%= @country_counts[country] %>)</span>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>

  <!-- News Grid -->
  <section class="news-section">
    <div class="news-container">
      <% if @news_items.any? %>
        <div class="news-grid">
          <% @news_items.each do |news| %>
            <%= link_to news_detail_path(news), class: "news-card" do %>
              <div class="news-card-header">
                <span class="news-country"><%= news.country %></span>
                <span class="news-date"><%= news.published_at&.strftime("%Y.%m.%d") %></span>
              </div>
              <h2 class="news-title"><%= news.title %></h2>
              <p class="news-description"><%= truncate(news.description, length: 120) %></p>
              <div class="news-footer">
                <span class="news-source"><%= news.source %></span>
                <span class="news-link">記事を読む</span>
              </div>
            <% end %>
          <% end %>
        </div>

        <!-- Pagination -->
        <% if @news_items.total_pages > 1 %>
          <div class="pagination-wrapper">
            <%= paginate @news_items %>
          </div>
        <% end %>
      <% else %>
        <div class="news-empty">
          <p class="empty-title">ニュースがありません</p>
          <p class="empty-text">現在、該当するニュースはありません。</p>
        </div>
      <% end %>
    </div>
  </section>

  <!-- Footer Note -->
  <section class="footer-note-section">
    <div class="footer-note-container">
      <p>ニュースは信頼性の高い教育専門メディアから収集しています。</p>
      <p class="source-list">情報元: ICEF Monitor / The PIE News / Study International</p>
    </div>
  </section>
</div>

<style>
  .news-page {
    background: #ffffff;
  }

  /* Hero Section */
  .hero-section {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    padding: 80px 20px;
    text-align: center;
    color: white;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-title {
    font-size: 48px;
    font-weight: 700;
    margin: 0 0 10px;
    letter-spacing: -0.5px;
  }

  .hero-subtitle {
    font-size: 18px;
    font-weight: 300;
    opacity: 0.8;
    letter-spacing: 2px;
    text-transform: uppercase;
    margin: 0;
  }

  .hero-divider {
    width: 60px;
    height: 3px;
    background: rgb(240, 177, 61);
    margin: 30px auto 0;
  }

  /* Filter Section */
  .filter-section {
    background: #f5f5f5;
    padding: 30px 20px;
    border-bottom: 1px solid #e5e5e5;
  }

  .filter-container {
    max-width: 1000px;
    margin: 0 auto;
  }

  .filter-buttons {
    display: flex;
    justify-content: center;
    gap: 12px;
    flex-wrap: wrap;
  }

  .filter-btn {
    display: inline-flex;
    align-items: center;
    padding: 10px 20px;
    background: white;
    border: 1px solid #e5e5e5;
    border-radius: 4px;
    font-size: 14px;
    font-weight: 500;
    color: #555;
    text-decoration: none;
    transition: all 0.2s;
  }

  .filter-btn:hover {
    border-color: #1a1a1a;
    color: #1a1a1a;
    text-decoration: none;
  }

  .filter-btn.active {
    background: #1a1a1a;
    border-color: #1a1a1a;
    color: white;
  }

  .filter-count {
    margin-left: 6px;
    font-size: 12px;
    opacity: 0.7;
  }

  /* News Section */
  .news-section {
    padding: 60px 20px;
  }

  .news-container {
    max-width: 1000px;
    margin: 0 auto;
  }

  .news-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
  }

  /* News Card */
  .news-card {
    display: block;
    background: white;
    border: 1px solid #e5e5e5;
    border-radius: 6px;
    padding: 28px;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s;
  }

  .news-card:hover {
    border-color: #1a1a1a;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    text-decoration: none;
  }

  .news-card:hover .news-title {
    color: rgb(200, 140, 40);
  }

  .news-card:hover .news-link {
    color: rgb(200, 140, 40);
  }

  .news-card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
  }

  .news-country {
    display: inline-block;
    padding: 4px 12px;
    background: transparent;
    color: rgb(200, 140, 40);
    border: 1px solid rgb(200, 140, 40);
    border-radius: 4px;
    font-size: 12px;
    font-weight: 600;
  }

  .news-date {
    font-size: 13px;
    color: #999;
  }

  .news-title {
    font-size: 17px;
    font-weight: 600;
    color: #1a1a1a;
    line-height: 1.5;
    margin: 0 0 12px;
    transition: color 0.2s;
  }

  .news-description {
    font-size: 14px;
    color: #666;
    line-height: 1.7;
    margin: 0 0 20px;
  }

  .news-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 16px;
    border-top: 1px solid #f0f0f0;
  }

  .news-source {
    font-size: 12px;
    color: #999;
  }

  .news-link {
    font-size: 13px;
    font-weight: 500;
    color: #1a1a1a;
    transition: color 0.2s;
  }

  .news-link::after {
    content: ' →';
  }

  /* Empty State */
  .news-empty {
    text-align: center;
    padding: 80px 20px;
  }

  .empty-title {
    font-size: 20px;
    font-weight: 600;
    color: #1a1a1a;
    margin: 0 0 10px;
  }

  .empty-text {
    font-size: 15px;
    color: #999;
    margin: 0;
  }

  /* Pagination */
  .pagination-wrapper {
    margin-top: 50px;
    display: flex;
    justify-content: center;
  }

  .pagination-wrapper nav {
    display: flex;
    gap: 8px;
    align-items: center;
  }

  .pagination-wrapper a,
  .pagination-wrapper span.current,
  .pagination-wrapper span.gap {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 40px;
    height: 40px;
    padding: 0 12px;
    border-radius: 4px;
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s;
    border: 1px solid #e5e5e5;
    background: white;
    color: #555;
  }

  .pagination-wrapper a:hover {
    border-color: #1a1a1a;
    color: #1a1a1a;
  }

  .pagination-wrapper span.current {
    background: #1a1a1a;
    border-color: #1a1a1a;
    color: white;
  }

  .pagination-wrapper span.gap {
    border: none;
    background: transparent;
    color: #ccc;
  }

  /* Footer Note */
  .footer-note-section {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    padding: 50px 20px;
    text-align: center;
    color: white;
  }

  .footer-note-container {
    max-width: 700px;
    margin: 0 auto;
  }

  .footer-note-container p {
    font-size: 15px;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.9);
    margin: 0 0 10px;
  }

  .source-list {
    font-size: 13px !important;
    color: rgba(255, 255, 255, 0.6) !important;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-section {
      padding: 60px 20px;
    }

    .hero-title {
      font-size: 36px;
    }

    .filter-section {
      padding: 20px 16px;
    }

    .filter-btn {
      padding: 8px 14px;
      font-size: 13px;
    }

    .news-section {
      padding: 40px 16px;
    }

    .news-grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .news-card {
      padding: 20px;
    }

    .news-title {
      font-size: 16px;
    }

    .footer-note-section {
      padding: 40px 20px;
    }
  }
</style>
