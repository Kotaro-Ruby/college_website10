  });

  // „ÉÅ„Çß„ÉÉ„ÇØ„Éú„ÉÉ„ÇØ„Çπ„Éª„É©„Ç∏„Ç™„Éú„Çø„É≥Â§âÊõ¥ÊôÇ„Å´Áä∂ÊÖã„Çí‰øùÂ≠ò
  document.addEventListener('change', function(e) {
    if (e.target.matches('input[type="checkbox"], input[type="radio"]')) {
