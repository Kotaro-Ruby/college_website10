    max-width: 1200px;
    margin: 0 auto;
  }

  /* Section Styles */
  .section {
    margin-bottom: 60px;
  }

  .section-title {
    font-family: 'Poppins', sans-serif;
    font-size: 1.8rem;
    font-weight: 600;
    color: #2d3748;
    margin-bottom: 20px;
    position: relative;
    padding-left: 16px;
  }

  .section-title::before {
    content: '';
    position: absolute;
    left: 0;
    top: 6px;
    bottom: 6px;
    width: 4px;
    background: linear-gradient(135deg, #fb923c, #f97316);
    border-radius: 2px;
  }

  .section-footer {
    text-align: center;
    margin-top: 30px;
  }

  /* Button Styles */
  .btn {
    display: inline-flex;
    align-items: center;
    padding: 14px 28px;
    border-radius: 12px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    font-size: 16px;
  }

  .btn-primary {
    background: linear-gradient(135deg, #fb923c, #f97316);
    color: white;
    box-shadow: 0 4px 20px rgba(251, 146, 60, 0.3);
  }

  .btn-primary:hover {
    background: linear-gradient(135deg, #f97316, #ea580c);
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(251, 146, 60, 0.4);
    color: white;
  }

  .btn-outline {
    background: transparent;
    color: #fb923c;
    border-color: #fb923c;
  }

  .btn-outline:hover {
    background: #fb923c;
    color: white;
    transform: translateY(-2px);
  }

  /* Quick Search */
  .quick-search-container {
    background: linear-gradient(135deg, #fef3e2 0%, #fed7aa 100%);
    border-radius: 16px;
    padding: 30px;
    box-shadow: 0 4px 20px rgba(254, 215, 170, 0.3);
  }

  .search-input-wrapper {
    display: flex;
    gap: 12px;
    margin-bottom: 15px;
    flex-wrap: wrap;
  }

  .search-input {
    flex: 1;
    min-width: 300px;
    border: 2px solid rgba(251, 146, 60, 0.2);
    border-radius: 12px;
    padding: 14px 18px;
    font-size: 16px;
    background: white;
    transition: all 0.3s ease;
  }

  .search-input:focus {
    outline: none;
    border-color: #fb923c;
    box-shadow: 0 0 0 3px rgba(251, 146, 60, 0.1);
  }

  .search-btn {
    background: linear-gradient(135deg, #fb923c, #f97316);
    color: white;
    border: none;
    padding: 14px 24px;
    border-radius: 12px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 8px;
    white-space: nowrap;
  }

  .search-btn:hover {
    background: linear-gradient(135deg, #f97316, #ea580c);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(251, 146, 60, 0.3);
  }

  .search-note {
    color: #9a3412;
    font-size: 14px;
    text-align: center;
  }

  .link-accent {
    color: #fb923c;
    text-decoration: none;
    font-weight: 600;
  }

  .link-accent:hover {
    color: #f97316;
    text-decoration: underline;
  }

  /* Recently Viewed & Rankings */
  .recently-viewed-grid,
  .ranking-grid {
    display: grid;
    gap: 20px;
  }

  .recently-viewed-grid {
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  }

  .college-card,
  .ranking-card {
    background: white;
    border-radius: 16px;
    padding: 20px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    border: 1px solid rgba(251, 146, 60, 0.1);
  }

  .college-card::before,
  .ranking-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(135deg, #fb923c, #f97316);
  }

  .college-card:hover,
  .ranking-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(251, 146, 60, 0.15);
  }

  .college-link,
  .ranking-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .ranking-card {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .ranking-link {
    display: flex;
    align-items: center;
    gap: 20px;
    width: 100%;
  }

  .rank-number {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, #fb923c, #f97316);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.2rem;
    flex-shrink: 0;
  }

  .college-header {
    margin-bottom: 15px;
  }

  .college-name {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 5px;
    color: #2d3748;
  }

  .college-location {
    color: #718096;
    font-size: 0.9rem;
    display: flex;
    align-items: center;
    gap: 5px;
  }

  .college-location i {
    color: #fb923c;
  }

  .college-stats {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 15px;
    margin-bottom: 15px;
  }

  .stat-item {
    text-align: center;
    padding: 10px;
    background: #f8f9fa;
    border-radius: 8px;
    border: 1px solid #e9ecef;
  }

  .stat-label {
    display: block;
    font-size: 0.75rem;
    color: #6b7280;
    font-weight: 500;
    margin-bottom: 3px;
  }

  .stat-value {
    font-size: 0.9rem;
    font-weight: 600;
    color: #fb923c;
  }

  .college-highlights {
    display: flex;
    gap: 10px;
    margin-top: 8px;
    flex-wrap: wrap;
  }

  .highlight {
    background: linear-gradient(135deg, #fef3e2, #fed7aa);
    color: #9a3412;
    padding: 4px 10px;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 500;
    border: 1px solid rgba(251, 146, 60, 0.2);
  }

  .card-arrow,
  .ranking-arrow {
    color: #fb923c;
    font-size: 1.2rem;
    transition: transform 0.3s ease;
  }

  .college-card:hover .card-arrow,
  .ranking-card:hover .ranking-arrow {
    transform: translateX(4px);
  }

  .card-arrow {
    text-align: right;
  }

  .college-info {
    flex: 1;
  }

  /* Features Grid */
  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 25px;
  }

  .feature-card {
    background: white;
    padding: 30px 25px;
    border-radius: 16px;
    text-align: center;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    border: 1px solid rgba(251, 146, 60, 0.1);
  }

  .feature-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 40px rgba(251, 146, 60, 0.15);
  }

  .feature-icon {
    width: 70px;
    height: 70px;
    background: linear-gradient(135deg, #fb923c, #f97316);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 20px;
  }

  .feature-icon i {
    font-size: 1.8rem;
    color: white;
  }

  .feature-card h3 {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 15px;
    color: #2d3748;
  }

  .feature-card p {
    color: #718096;
    line-height: 1.6;
    font-size: 0.95rem;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .content-padding {
      padding: 40px 20px 30px;
    }

    .hero-section {
      min-height: 300px;
      padding: 40px 20px;
    }

    .search-input-wrapper {
      flex-direction: column;
    }

    .search-input {
      min-width: auto;
    }

    .college-stats {
      grid-template-columns: 1fr;
      gap: 10px;
    }

    .ranking-card {
      flex-direction: column;
      text-align: center;
      gap: 15px;
    }

    .ranking-link {
      flex-direction: column;
      text-align: center;
      gap: 15px;
    }

    .college-highlights {
      justify-content: center;
    }

    .features-grid {
      grid-template-columns: 1fr;
    }

    .section-title {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .content-padding {
      padding: 30px 15px 20px;
    }

    .quick-search-container {
      padding: 20px;
    }

    .college-card,
    .ranking-card {
      padding: 15px;
    }

    .feature-card {
      padding: 25px 20px;
    }
  }

  .me-2 { margin-right: 0.5rem; }
  .ms-2 { margin-left: 0.5rem; }

  /* サイト説明セクションのスタイル */
  .site-description {
    background: rgba(255, 255, 255, 0.9);
    border-radius: 20px;
    padding: 30px;
    border: 1px solid rgba(251, 146, 60, 0.2);
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
  }

  .description-card {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-bottom: 30px;
