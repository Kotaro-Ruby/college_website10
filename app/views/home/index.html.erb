  function initializeFeaturedToggle() {
    // View Toggle for Featured Universities
    const viewToggles = document.querySelectorAll('.toggle-btn');
    const featuredView = document.getElementById('featured-view');
    
    if (!viewToggles.length || !featuredView) return;
    
    // Remove existing event listeners to prevent duplicates
    viewToggles.forEach(toggle => {
      const newToggle = toggle.cloneNode(true);
      toggle.parentNode.replaceChild(newToggle, toggle);
    });
    
    // Get fresh references after cloning
    const newToggles = document.querySelectorAll('.toggle-btn');
    
    newToggles.forEach(toggle => {
      toggle.addEventListener('click', function(e) {
        e.preventDefault();
        
        // Remove active class from all buttons
        newToggles.forEach(t => t.classList.remove('active'));
        
        // Add active class to clicked button
        this.classList.add('active');
        
        // Get the view type
        const viewType = this.dataset.view;
        
        // Update the view styles based on selection
        if (viewType === 'list') {
          // List view - single column
          featuredView.classList.add('list-view');
          featuredView.classList.remove('grid-view');
          featuredView.style.display = 'flex';
          featuredView.style.flexDirection = 'column';
          featuredView.style.gap = '20px';
          featuredView.style.gridTemplateColumns = '';
          
          // Update card styles for list view
          const cards = featuredView.querySelectorAll('.college-card');
          cards.forEach(card => {
            card.style.display = 'flex';
            card.style.flexDirection = 'row';
            card.style.alignItems = 'center';
            card.style.padding = '20px';
            card.style.gap = '20px';
          });
        } else {
          // Grid view - multiple columns
          featuredView.classList.add('grid-view');
          featuredView.classList.remove('list-view');
          featuredView.style.display = 'grid';
          featuredView.style.gridTemplateColumns = 'repeat(auto-fit, minmax(250px, 1fr))';
          featuredView.style.gap = '20px';
          featuredView.style.flexDirection = '';
          
          // Reset card styles for grid view
          const cards = featuredView.querySelectorAll('.college-card');
          cards.forEach(card => {
            card.style.display = '';
            card.style.flexDirection = '';
            card.style.alignItems = '';
            card.style.padding = '';
            card.style.gap = '';
          });
        }
        
        // Save preference to localStorage
        localStorage.setItem('preferredFeaturedView', viewType);
      });
    });
    
    // Apply saved preference on load
    const savedView = localStorage.getItem('preferredFeaturedView');
    if (savedView) {
      const savedButton = document.querySelector(`.toggle-btn[data-view="${savedView}"]`);
      if (savedButton) {
        savedButton.click();
      }
    }
  }

  function initializeSubjectTabs() {
    const tabs = document.querySelectorAll('.subject-tab');
    const contents = document.querySelectorAll('.subject-ranking-content');

    if (!tabs.length || !contents.length) return;

    // Remove existing event listeners to prevent duplicates
    tabs.forEach(tab => {
      const newTab = tab.cloneNode(true);
      tab.parentNode.replaceChild(newTab, tab);
    });

    // Get fresh references after cloning
    const newTabs = document.querySelectorAll('.subject-tab');

    newTabs.forEach(tab => {
      tab.addEventListener('click', function() {
        const subject = this.dataset.subject;

        // Remove active class from all tabs
        newTabs.forEach(t => t.classList.remove('active'));

        // Add active class to clicked tab
        this.classList.add('active');

        // Hide all content
        contents.forEach(content => {
          content.style.display = 'none';
        });

        // Show selected content
        const selectedContent = document.querySelector(`.subject-ranking-content[data-subject="${subject}"]`);
        if (selectedContent) {
          selectedContent.style.display = 'block';
        }
      });
    });
  }

  // „Éö„Éº„Ç∏Áä∂ÊÖã„ÅÆ‰øùÂ≠ò„Å®Âæ©ÂÖÉÊ©üËÉΩ
  function savePageState() {
    const state = {
      scrollPosition: window.scrollY,
      searchQuery: document.querySelector('input[name="query"]')?.value || '',
      filters: {},
      activeTab: document.querySelector('.subject-tab.active')?.dataset.subject || '',
      viewMode: document.querySelector('.toggle-btn.active')?.dataset.view || 'grid'
    };

    // „Åô„Åπ„Å¶„ÅÆÂÖ•Âäõ„Éï„Ç£„Éº„É´„Éâ„Å®„Çª„É¨„ÇØ„Éà„Éú„ÉÉ„ÇØ„Çπ„Çí‰øùÂ≠ò
    document.querySelectorAll('input, select, textarea').forEach(input => {
      if (input.name) {
        if (input.type === 'checkbox' || input.type === 'radio') {
          state.filters[input.name] = input.checked;
        } else {
          state.filters[input.name] = input.value;
        }
      }
    });

    sessionStorage.setItem('homePageState', JSON.stringify(state));
  }

  function restorePageState() {
    const savedState = sessionStorage.getItem('homePageState');
    if (!savedState) return;

    try {
      const state = JSON.parse(savedState);

      // ÂÖ•Âäõ„Éï„Ç£„Éº„É´„Éâ„Å®„Çª„É¨„ÇØ„Éà„Éú„ÉÉ„ÇØ„Çπ„ÇíÂæ©ÂÖÉ
      Object.keys(state.filters).forEach(name => {
        const input = document.querySelector(`[name="${name}"]`);
        if (input) {
          if (input.type === 'checkbox' || input.type === 'radio') {
            input.checked = state.filters[name];
          } else {
            input.value = state.filters[name];
          }
        }
      });

      // „Ç¢„ÇØ„ÉÜ„Ç£„Éñ„Å™„Çø„Éñ„ÇíÂæ©ÂÖÉ
      if (state.activeTab) {
        const tab = document.querySelector(`.subject-tab[data-subject="${state.activeTab}"]`);
        if (tab) {
          tab.click();
        }
      }

      // „Éì„É•„Éº„É¢„Éº„Éâ„ÇíÂæ©ÂÖÉ
      if (state.viewMode) {
        const viewToggle = document.querySelector(`.toggle-btn[data-view="${state.viewMode}"]`);
        if (viewToggle && !viewToggle.classList.contains('active')) {
          viewToggle.click();
        }
      }

      // „Çπ„ÇØ„É≠„Éº„É´‰ΩçÁΩÆ„ÇíÂæ©ÂÖÉÔºàÂ∞ë„ÅóÈÅÖÂª∂„Åï„Åõ„Å¶Á¢∫ÂÆü„Å´Âæ©ÂÖÉÔºâ
      if (state.scrollPosition) {
        setTimeout(() => {
          window.scrollTo(0, state.scrollPosition);
        }, 100);
      }
    } catch (e) {
      console.error('Failed to restore page state:', e);
    }
  }

  // „Éö„Éº„Ç∏Ë™≠„ÅøËæº„ÅøÊôÇ„Å´Áä∂ÊÖã„ÇíÂæ©ÂÖÉ
  document.addEventListener('DOMContentLoaded', function() {
    restorePageState();
  });

  document.addEventListener('turbo:load', function() {
    restorePageState();
  });

  // „É™„É≥„ÇØ„ÇØ„É™„ÉÉ„ÇØÊôÇ„Å´Áä∂ÊÖã„Çí‰øùÂ≠ò
  document.addEventListener('click', function(e) {
    const link = e.target.closest('a');
    if (link && link.href && !link.href.includes('#')) {
      savePageState();
    }
  });

  // „Çπ„ÇØ„É≠„Éº„É´ÊôÇ„Å´ÂÆöÊúüÁöÑ„Å´Áä∂ÊÖã„Çí‰øùÂ≠ò
  let scrollTimeout;
  window.addEventListener('scroll', function() {
    clearTimeout(scrollTimeout);
    scrollTimeout = setTimeout(savePageState, 200);
  });

  // „Éï„Ç©„Éº„É†ÂÖ•ÂäõÊôÇ„Å´Áä∂ÊÖã„Çí‰øùÂ≠ò
  document.addEventListener('input', function(e) {
    if (e.target.matches('input, select, textarea')) {
      savePageState();
