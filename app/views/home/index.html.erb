<% content_for :title, "College Spark - アメリカ大学検索・比較サイト" %>
<% content_for :description, "6,300校以上のアメリカの大学から、あなたの条件に合った大学を検索できます。学費、合格率、専攻、州など詳細な情報で大学選びをサポートします。" %>
<% content_for :keywords, "アメリカ大学, 大学検索, 留学, 海外大学, College Spark, 大学選び, 学費, 合格率, 大学比較, アメリカ留学" %>
<% content_for :og_title, "College Spark - アメリカ大学検索・比較サイト" %>
<% content_for :og_description, "6,300校以上のアメリカの大学から、あなたの条件に合った大学を検索・比較できます。学費、合格率、専攻など詳細な情報で大学選びをサポートします。" %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Poppins:wght@400;500;600;700;800&display=swap" rel="stylesheet">

<div class="page-container">
  <!-- Hero Section -->
  <div class="hero-section">
    <div class="hero-content">
      <h1 class="hero-title">College Spark</h1>
      <p class="hero-subtitle">あなたにぴったりの大学を見つけよう</p>
      <p class="hero-description">6,300校以上のアメリカの大学から、あなたの条件に合った大学を検索できます</p>
      
      <!-- メインアクションボタン -->
      <div class="hero-actions">
        <%= link_to "/search", class: "btn btn-primary" do %>
          <i class="fas fa-search me-2"></i>大学を検索する
        <% end %>
      </div>
    </div>
  </div>

  <!-- メインコンテンツ -->
  <div class="main-content">
    <div class="content-padding">
      
      <!-- クイック検索セクション -->
      <div class="section">
        <h2 class="section-title">
          <i class="fas fa-search me-2"></i>大学名で直接検索
        </h2>
        <div class="quick-search-container">
          <div class="search-input-wrapper">
            <input type="text" id="hero-search-input" placeholder="例：Harvard University, Stanford University..." class="search-input">
            <button id="hero-search-btn" class="search-btn">
              <i class="fas fa-search"></i>
              <span>検索</span>
            </button>
          </div>
          <div class="search-note">
            大学名を入力して直接検索するか、<%= link_to "詳細検索", "/search", class: "link-accent" %>で条件を指定して検索できます
          </div>
        </div>
      </div>

      <!-- 最近閲覧した大学セクション -->
      <% if recently_viewed_colleges.any? %>
        <div class="section">
          <h2 class="section-title">
            <i class="fas fa-history me-2"></i>最近閲覧した大学
          </h2>
          <div class="recently-viewed-grid">
            <% recently_viewed_colleges.each do |college| %>
              <div class="college-card">
                <%= link_to conditions_path(college.slug || college.id), class: "college-link" do %>
                  <div class="college-header">
                    <h3 class="college-name"><%= college.college %></h3>
                    <p class="college-location">
                      <i class="fas fa-map-marker-alt"></i>
                      <%= college.state %>州
                    </p>
                  </div>
                  
                  <div class="college-stats">
                    <div class="stat-item">
                      <span class="stat-label">授業料</span>
                      <span class="stat-value">
                        <%= if college.privateorpublic == "州立" || college.privateorpublic == "Public"
                              if college.tuition_out_state.present?
                                "$#{number_with_delimiter(college.tuition_out_state)}"
                              elsif college.tuition.present?
                                "$#{number_with_delimiter(college.tuition)}"
                              else
                                "N/A"
                              end
                            else
                              college.tuition ? "$#{number_with_delimiter(college.tuition)}" : "N/A"
                            end %>
                      </span>
                    </div>
                    
                    <div class="stat-item">
                      <span class="stat-label">合格率</span>
                      <span class="stat-value">
                        <%= college.acceptance_rate ? "#{(college.acceptance_rate * 100).round}%" : "N/A" %>
                      </span>
                    </div>
                  </div>
                  
                  <div class="card-arrow">
                    <i class="fas fa-chevron-right"></i>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- 人気大学ランキングセクション -->
      <div class="section">
        <h2 class="section-title">
          <i class="fas fa-fire me-2"></i>人気の大学ランキング
        </h2>
        <div class="ranking-grid">
          <% @popular_colleges&.each_with_index do |college, index| %>
            <div class="ranking-card">
              <%= link_to conditions_path(college.slug || college.id), class: "ranking-link" do %>
                <div class="rank-number">
                  <span><%= index + 1 %></span>
                </div>
                
                <div class="college-info">
                  <h3 class="college-name"><%= college.college %></h3>
                  <p class="college-location">
                    <i class="fas fa-map-marker-alt"></i>
                    <%= college.state %>州
                  </p>
                  
                  <div class="college-highlights">
                    <% if college.acceptance_rate %>
                      <span class="highlight">合格率 <%= (college.acceptance_rate * 100).round %>%</span>
                    <% end %>
                    <% if college.students %>
                      <span class="highlight">学生数 <%= number_with_delimiter(college.students) %>人</span>
                    <% end %>
                  </div>
                </div>
                
                <div class="ranking-arrow">
                  <i class="fas fa-chevron-right"></i>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
        
        <div class="section-footer">
          <%= link_to "/search", class: "btn btn-outline" do %>
            すべての大学を見る <i class="fas fa-arrow-right ms-2"></i>
          <% end %>
        </div>
      </div>

      <!-- サイト詳細説明セクション -->
      <div class="section">
        <div class="site-description">
          <div class="description-card">
            <div class="description-icon">
              <i class="fas fa-university"></i>
            </div>
            <div class="description-content">
              <h3>4,000校以上のアメリカ大学データベース</h3>
              <p>ハーバード大学やスタンフォード大学をはじめ、全米の4年制大学の詳細情報を網羅。学費、立地、専攻、入学難易度などを一括検索できます。</p>
            </div>
          </div>
          
          <div class="features-overview-grid">
            <div class="overview-item">
              <i class="fas fa-search"></i>
              <h4>詳細検索</h4>
              <p>州、学費、専攻、SATスコアなど複数条件で絞り込み</p>
            </div>
            <div class="overview-item">
              <i class="fas fa-dollar-sign"></i>
              <h4>学費情報</h4>
              <p>州立・私立別の正確な学費データを表示</p>
            </div>
            <div class="overview-item">
              <i class="fas fa-graduation-cap"></i>
              <h4>入学データ</h4>
              <p>合格率、SAT/ACTスコア、卒業率を確認</p>
            </div>
            <div class="overview-item">
              <i class="fas fa-book-open"></i>
              <h4>専攻情報</h4>
              <p>16分野の専攻から希望の学部を検索</p>
            </div>
          </div>
          
          <div class="how-to-use">
            <h3><i class="fas fa-info-circle"></i>使い方</h3>
            <div class="steps">
              <div class="step">
                <span class="step-number">1</span>
                <p>大学名で直接検索するか、下の条件を設定</p>
              </div>
              <div class="step">
                <span class="step-number">2</span>
                <p>州、学費、専攻などの希望条件を選択</p>
              </div>
              <div class="step">
                <span class="step-number">3</span>
                <p>検索ボタンを押して結果を確認</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- 機能紹介セクション -->
      <div class="section">
        <h2 class="section-title">
          <i class="fas fa-star me-2"></i>College Sparkの特徴
        </h2>
        <div class="features-grid">
          <div class="feature-card">
            <div class="feature-icon">
              <i class="fas fa-search"></i>
            </div>
            <h3>詳細な検索機能</h3>
            <p>州、学費、学生数、専攻、テストスコアなど、様々な条件で大学を絞り込めます</p>
          </div>
          
          <div class="feature-card">
            <div class="feature-icon">
              <i class="fas fa-chart-bar"></i>
            </div>
            <h3>豊富な統計データ</h3>
            <p>合格率、卒業率、収入データなど、大学選びに必要な詳細な情報を提供</p>
          </div>
          
          <div class="feature-card">
            <div class="feature-icon">
              <i class="fas fa-heart"></i>
            </div>
            <h3>お気に入り機能</h3>
            <p>気になる大学をお気に入りに保存して、後から簡単に比較検討できます</p>
          </div>
          
          <div class="feature-card">
            <div class="feature-icon">
              <i class="fas fa-balance-scale"></i>
            </div>
            <h3>大学比較機能</h3>
            <p>複数の大学を並べて比較し、あなたに最適な選択をサポートします</p>
          </div>
        </div>
      </div>
      
    </div>
  </div>
</div>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Inter', sans-serif;
    line-height: 1.6;
    color: #2d3748;
    background: linear-gradient(135deg, #fef3e2 0%, #fed7aa 30%, #fcd8a0 70%, #f3d0a0 100%);
    min-height: 100vh;
  }

  .page-container {
    min-height: 100vh;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
  }

  /* Hero Section */
  .hero-section {
    background: linear-gradient(135deg, rgba(251, 146, 60, 0.9), rgba(249, 115, 22, 0.8));
