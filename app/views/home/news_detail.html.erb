    font-size: 32px;
    font-weight: 700;
    margin: 0 0 16px;
    line-height: 1.4;
    letter-spacing: -0.5px;
  }

  .news-source {
    font-size: 14px;
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
  }

  .hero-divider {
    width: 60px;
    height: 3px;
    background: rgb(240, 177, 61);
    margin: 30px auto 0;
  }

  /* Content Section */
  .content-section {
    padding: 60px 20px;
  }

  .content-container {
    max-width: 700px;
    margin: 0 auto;
  }

  .description-box {
    background: #f8f8f8;
    border-left: 3px solid #1a1a1a;
    padding: 30px;
    border-radius: 6px;
    margin-bottom: 40px;
  }

  .description-box p {
    font-size: 16px;
    line-height: 1.9;
    color: #444;
    margin: 0;
  }

  /* Action Box */
  .action-box {
    text-align: center;
    margin-bottom: 40px;
  }

  .read-article-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 16px 40px;
    background: #1a1a1a;
    color: white;
    text-decoration: none;
    border-radius: 6px;
    font-size: 15px;
    font-weight: 600;
    transition: all 0.2s;
  }

  .read-article-btn:hover {
    background: rgb(200, 140, 40);
    color: white;
    text-decoration: none;
  }

  .read-article-btn .arrow {
    transition: transform 0.2s;
  }

  .read-article-btn:hover .arrow {
    transform: translateX(4px);
  }

  .source-note {
    font-size: 13px;
    color: #999;
    margin: 16px 0 0;
  }

  /* Back Link */
  .back-link {
    text-align: center;
    padding-top: 30px;
    border-top: 1px solid #e5e5e5;
  }

  .back-link a {
    font-size: 14px;
    color: #666;
    text-decoration: none;
    transition: color 0.2s;
  }

  .back-link a:hover {
    color: #1a1a1a;
  }

  /* Related Section */
  .related-section {
    background: #f5f5f5;
    padding: 60px 20px;
  }

  .related-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .related-title {
    font-size: 20px;
    font-weight: 700;
    color: #1a1a1a;
    margin: 0 0 24px;
    text-align: center;
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
  }

  .related-card {
    display: block;
    background: white;
    border: 1px solid #e5e5e5;
    border-radius: 6px;
    padding: 24px;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s;
  }

  .related-card:hover {
    border-color: #1a1a1a;
    text-decoration: none;
  }

  .related-card:hover .related-card-title {
    color: rgb(200, 140, 40);
  }

  .related-card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12px;
  }

  .related-country {
    font-size: 12px;
    font-weight: 600;
    color: rgb(200, 140, 40);
  }

  .related-date {
    font-size: 12px;
    color: #999;
  }

  .related-card-title {
    font-size: 15px;
    font-weight: 600;
    color: #1a1a1a;
    line-height: 1.5;
    margin: 0 0 12px;
    transition: color 0.2s;
  }

  .related-source {
    font-size: 12px;
    color: #999;
  }

  /* Footer Note */
  .footer-note-section {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    padding: 50px 20px;
    text-align: center;
    color: white;
  }

  .footer-note-container {
    max-width: 700px;
    margin: 0 auto;
  }

  .footer-note-container p {
    font-size: 15px;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.9);
    margin: 0 0 10px;
  }

  .source-list {
    font-size: 13px !important;
    color: rgba(255, 255, 255, 0.6) !important;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-section {
      padding: 60px 20px;
    }

    .hero-title {
      font-size: 24px;
    }

    .content-section {
      padding: 40px 16px;
    }

    .description-box {
      padding: 24px 20px;
    }

    .related-section {
      padding: 40px 16px;
    }

    .related-grid {
      grid-template-columns: 1fr;
    }

    .related-card {
      padding: 20px;
    }

    .footer-note-section {
      padding: 40px 20px;
    }
  }
</style>
