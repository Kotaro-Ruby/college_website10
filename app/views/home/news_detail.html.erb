<%
  # 国ごとの画像フォルダと枚数（1.jpgは各国aboutページで使用のため除外）
  news_image_config = {
    'USA' => { folder: 'usa', count: 11, start: 2 },
    'Australia' => { folder: 'australia', count: 6, start: 2 },
    'Canada' => { folder: 'canada', count: 9, start: 2 },
    'New Zealand' => { folder: 'newzealand', count: 4, start: 2 }
  }

  config = news_image_config[@news.country] || { folder: 'usa', count: 11, start: 2 }
  random_image_num = rand(config[:start]..config[:count])
  hero_image_path = "/images/news/#{config[:folder]}/#{random_image_num}.jpg"
%>

<div class="news-detail-page">
  <!-- Hero Section -->
  <section class="hero-section" style="background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.7)), url('<%= hero_image_path %>');">
    <div class="hero-content">
      <div class="news-meta">
        <span class="news-country"><%= @news.country %></span>
        <span class="news-date"><%= @news.published_at&.strftime("%Y.%m.%d") %></span>
      </div>
      <h1 class="hero-title"><%= @news.title %></h1>
      <p class="news-source"><%= @news.source %></p>
      <div class="hero-divider"></div>
    </div>
  </section>

  <!-- Content Section -->
  <section class="content-section">
    <div class="content-container">
      <!-- Description -->
      <div class="description-box">
        <p><%= @news.description %></p>
      </div>

      <!-- Action -->
      <div class="action-box">
        <a href="<%= @news.url %>" target="_blank" rel="noopener noreferrer" class="read-article-btn">
          元記事を読む
          <span class="arrow">→</span>
        </a>
        <p class="source-note">この記事は <%= @news.source %> からの情報です</p>
      </div>

      <!-- Back Link -->
      <div class="back-link">
        <%= link_to news_index_path do %>
          ← ニュース一覧に戻る
        <% end %>
      </div>
    </div>
  </section>

  <!-- Related News -->
  <%
    related_news = News.where(status: 'published')
                       .where.not(id: @news.id)
                       .where(country: @news.country)
                       .order(published_at: :desc)
                       .limit(2)
  %>
  <% if related_news.any? %>
    <section class="related-section">
      <div class="related-container">
        <h2 class="related-title">関連ニュース</h2>
        <div class="related-grid">
          <% related_news.each do |news| %>
            <%= link_to news.url, class: "related-card", target: "_blank", rel: "noopener noreferrer" do %>
              <div class="related-card-header">
                <span class="related-country"><%= news.country %></span>
                <span class="related-date"><%= news.published_at&.strftime("%Y.%m.%d") %></span>
              </div>
              <h3 class="related-card-title"><%= news.title %></h3>
              <span class="related-source"><%= news.source %></span>
            <% end %>
          <% end %>
        </div>
      </div>
    </section>
  <% end %>

  <!-- Footer Note -->
  <section class="footer-note-section">
    <div class="footer-note-container">
      <p>ニュースは信頼性の高い教育専門メディアから収集しています。</p>
      <p class="source-list">情報元: ICEF Monitor / The PIE News / Study International</p>
    </div>
  </section>
</div>

<style>
  .news-detail-page {
    background: #ffffff;
  }

  /* Hero Section */
  .hero-section {
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    padding: 100px 20px;
    text-align: center;
    color: white;
  }

