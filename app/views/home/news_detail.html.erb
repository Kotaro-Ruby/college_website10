    display: flex;
    justify-content: center;
    align-items: center;
    gap: 16px;
    margin-bottom: 24px;
  }

  .news-country {
    display: inline-block;
    padding: 4px 12px;
    background: transparent;
    color: rgb(240, 177, 61);
    border: 1px solid rgb(240, 177, 61);
    border-radius: 4px;
    font-size: 12px;
    font-weight: 600;
  }

  .news-date {
    font-size: 14px;
    color: rgba(255, 255, 255, 0.6);
  }

