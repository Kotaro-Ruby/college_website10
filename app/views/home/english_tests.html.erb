    max-width: 100%;
    margin: 0;
    padding: 0;
    background: #ffffff;
  }

  /* Hero Section */
  .hero-section {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    padding: 80px 20px;
    text-align: center;
    color: white;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-title {
    font-size: 48px;
    font-weight: 700;
    margin-bottom: 10px;
    letter-spacing: -0.5px;
  }

  .hero-subtitle {
    font-size: 18px;
    font-weight: 300;
    opacity: 0.8;
    letter-spacing: 2px;
    text-transform: uppercase;
  }

  .hero-divider {
    width: 60px;
    height: 3px;
    background: rgb(240, 177, 61);
    margin: 30px auto 0;
  }

  /* Section Wrapper */
  .section-wrapper {
    padding: 80px 20px;
  }

  .section-content {
    max-width: 1100px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 50px;
  }

  .section-header h2 {
    font-size: 36px;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 15px;
  }

  .section-description {
    font-size: 16px;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    font-weight: 300;
  }

  /* Alternating Backgrounds */
  .tests-section-bg {
    background: #f5f5f5;
  }

  .plan-section-bg {
    background: #f5f5f5;
  }

  .strategies-section-bg {
    background: #f5f5f5;
  }

  .final-section-bg {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    color: white;
  }

  /* Mission Content */
  .mission-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 50px 40px;
    background: #fafafa;
    border-radius: 8px;
    border: 1px solid #e5e5e5;
    text-align: center;
  }

  .mission-content p {
    font-size: 16px;
    line-height: 1.9;
    color: #555;
  }

  .highlight {
    background: linear-gradient(120deg, rgba(240, 177, 61, 0.2) 0%, rgba(240, 177, 61, 0.15) 100%);
    padding: 4px 8px;
    border-radius: 4px;
    font-weight: 600;
    color: rgb(200, 140, 40);
  }

  /* Intro paragraphs */
  .tests-intro,
  .score-intro,
  .plan-intro,
  .resources-intro,
  .strategies-intro {
    text-align: center;
    font-size: 16px;
    color: #666;
    margin-bottom: 40px;
    line-height: 1.8;
  }

  /* Tests Grid */
  .tests-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 25px;
  }

