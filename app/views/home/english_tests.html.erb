  .score-table th,
  .score-table td {
    padding: 18px 15px;
    text-align: center;
    border-bottom: 1px solid #e5e5e5;
  }

  .score-table th {
    background: linear-gradient(120deg, rgba(240, 177, 61, 0.12) 0%, rgba(240, 177, 61, 0.08) 100%);
    color: #1a1a1a;
    font-weight: 600;
    font-size: 15px;
  }

  .score-table td {
    font-size: 14px;
    color: #666;
  }

  .score-table td strong {
    color: #1a1a1a;
    font-weight: 600;
  }

  .score-table .sub-text {
    font-size: 12px;
    color: #999;
    font-weight: 400;
  }

  .score-table tr:hover {
    background: #fafafa;
  }

  /* Plan Grid */
  .plan-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 25px;
  }

  .plan-card {
    background: white;
    padding: 30px 25px;
    border-radius: 8px;
    border: 1px solid #e5e5e5;
    transition: all 0.3s ease;
  }

  .plan-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .plan-phase {
    display: inline-block;
    background: linear-gradient(120deg, rgba(240, 177, 61, 0.9), rgb(200, 140, 40));
    color: white;
    padding: 6px 16px;
    border-radius: 20px;
