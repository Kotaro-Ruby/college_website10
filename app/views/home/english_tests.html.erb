    border: 1px solid #e5e5e5;
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .test-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .test-number {
    font-size: 60px;
    font-weight: 700;
    color: rgba(240, 177, 61, 0.1);
    position: absolute;
    top: 20px;
    right: 20px;
    line-height: 1;
  }

  .test-card h4 {
    font-size: 22px;
    font-weight: 600;
    color: #1a1a1a;
    margin-bottom: 15px;
    position: relative;
    z-index: 1;
  }

  .score-range {
    font-size: 16px;
    font-weight: 700;
    color: rgb(200, 140, 40);
    margin-bottom: 15px;
    position: relative;
    z-index: 1;
  }

  .test-card > p {
    font-size: 14px;
    line-height: 1.7;
    color: #666;
    margin-bottom: 20px;
    position: relative;
    z-index: 1;
  }

