    background: #fafafa;
    padding: 15px;
    border-radius: 6px;
    border: 1px solid #e5e5e5;
    position: relative;
    z-index: 1;
  }

  .test-sections-box h5 {
    font-size: 14px;
    font-weight: 600;
    color: #1a1a1a;
    margin-bottom: 10px;
  }

  .test-sections-box ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .test-sections-box li {
    font-size: 13px;
    color: #666;
    padding: 4px 0;
    padding-left: 20px;
    position: relative;
  }

  .test-sections-box li::before {
    content: '•';
    position: absolute;
    left: 5px;
    color: rgb(200, 140, 40);
    font-weight: 700;
  }

  /* Score Table */
  .score-table-wrapper {
    overflow-x: auto;
  }

  .score-table {
    width: 100%;
    border-collapse: collapse;
