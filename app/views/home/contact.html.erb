<div class="main">
  <div class="professional-info-container">
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="hero-content">
        <h1 class="hero-title">お問い合わせ</h1>
        <p class="hero-subtitle">Contact</p>
        <div class="hero-divider"></div>
        <p class="hero-description">ご質問やご要望がございましたら、お気軽にお問い合わせください</p>
      </div>
    </section>

    <!-- Flash Messages -->
    <% if flash[:notice] %>
      <section class="section-wrapper">
        <div class="section-content">
          <div class="flash-message flash-notice">
            <i class="fas fa-check-circle"></i>
            <%= flash[:notice] %>
          </div>
        </div>
      </section>
      <script>
        document.addEventListener('DOMContentLoaded', function() {
          const contactForm = document.getElementById('contactForm');
          if (contactForm) {
            contactForm.style.display = 'none';
          }
        });
      </script>
    <% end %>

    <% if flash[:alert] %>
      <section class="section-wrapper">
        <div class="section-content">
          <div class="flash-message flash-alert">
            <i class="fas fa-exclamation-triangle"></i>
            <%= flash[:alert] %>
          </div>
        </div>
      </section>
    <% end %>

    <!-- Contact Options -->
    <section class="section-wrapper alt-section-bg">
      <div class="section-content">
        <div class="contact-options">
          <div class="contact-card">
            <div class="card-number">01</div>
            <div class="contact-icon consultation-icon">
              <i class="fas fa-comments"></i>
            </div>
            <h3>留学相談をご希望の方</h3>
            <p>アメリカ大学留学について専門アドバイザーに相談したい方はこちら</p>
            <a href="/consultations/new" class="contact-btn primary-btn">
              <i class="fas fa-calendar-check"></i>
              無料相談を予約する
            </a>
          </div>

          <div class="contact-card">
            <div class="card-number">02</div>
            <div class="contact-icon inquiry-icon">
              <i class="fas fa-question-circle"></i>
            </div>
            <h3>その他のお問い合わせ</h3>
            <p>サイトの使い方やその他のご質問がある方はこちら</p>
            <button class="contact-btn secondary-btn" onclick="showContactForm()">
              <i class="fas fa-paper-plane"></i>
              お問い合わせフォーム
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Form -->
    <section id="contactForm" class="section-wrapper" style="display: none;">
      <div class="section-content">
        <div class="form-card">
          <div class="card-number">03</div>
          <h2>お問い合わせフォーム</h2>

          <%= form_with url: contact_path, method: :post, local: true, id: "contactFormElement", class: "contact-form", data: { turbo: false } do |form| %>
            <div class="form-group">
              <%= form.label :name, "お名前", class: "form-label" %>
              <span class="required-badge">必須</span>
              <%= form.text_field :name, class: "form-control", placeholder: "山田 太郎", required: true %>
            </div>

            <div class="form-row">
              <div class="form-group">
                <%= form.label :email, "メールアドレス", class: "form-label" %>
                <span class="required-badge">必須</span>
                <%= form.email_field :email, class: "form-control", placeholder: "example@email.com", required: true %>
              </div>
              <div class="form-group">
                <%= form.label :phone, "電話番号", class: "form-label" %>
                <span class="optional-badge">任意</span>
                <%= form.text_field :phone, class: "form-control", placeholder: "090-1234-5678" %>
              </div>
            </div>

            <div class="form-group">
              <%= form.label :category, "件名", class: "form-label" %>
              <span class="required-badge">必須</span>
              <%= form.select :category, [
                ["件名を選択してください", ""],
                ["サイトの使用方法について", "site-usage"],
                ["技術的な問題・不具合", "site-bug"],
                ["大学データの更新依頼", "data-error"],
                ["新機能のご要望", "feature-request"],
                ["その他", "other"]
              ], {}, { class: "form-control", required: true } %>
            </div>

            <div class="form-group">
              <%= form.label :message, "お問い合わせ内容", class: "form-label" %>
              <span class="required-badge">必須</span>
              <%= form.text_area :message, class: "form-control", rows: 6, placeholder: "お問い合わせ内容を詳しくお聞かせください。", required: true %>
            </div>

            <div class="form-notice">
              <div class="notice-icon">
                <i class="fas fa-info-circle"></i>
              </div>
              <div class="notice-content">
                <strong>ご注意</strong>
                <p>アメリカの大学に関するご質問や個人的な留学相談については、上記の「無料相談を予約する」からお申し込みください。こちらのフォームでは、サイトの使い方や技術的な問題等についてのみ対応しております。</p>
              </div>
            </div>

            <div class="form-submit">
              <%= form.submit "送信する", class: "submit-btn" %>
            </div>
          <% end %>
        </div>
      </div>
    </section>

    <!-- Footer Note -->
    <section class="section-wrapper final-note-bg">
      <div class="section-content">
        <div class="footer-note">
          <p>通常、1〜2営業日以内にご返信いたします。</p>
        </div>
      </div>
    </section>
  </div>
</div>

<style>
/* Container */
.professional-info-container {
  max-width: 100%;
  margin: 0;
  padding: 0;
  background: #ffffff;
}

/* Hero Section */
.hero-section {
  background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  padding: 80px 20px;
  text-align: center;
  color: white;
}

.hero-content {
  max-width: 800px;
  margin: 0 auto;
}

.hero-title {
  font-size: 48px;
  font-weight: 700;
  margin-bottom: 10px;
  letter-spacing: -0.5px;
}

.hero-subtitle {
  font-size: 18px;
  font-weight: 300;
  opacity: 0.8;
  letter-spacing: 2px;
  text-transform: uppercase;
  margin-bottom: 0;
}

.hero-divider {
  width: 60px;
  height: 3px;
  background: rgb(240, 177, 61);
  margin: 30px auto;
}

.hero-description {
  font-size: 16px;
  opacity: 0.9;
  margin: 0;
}

/* Section Wrapper */
.section-wrapper {
  padding: 50px 20px;
}

.section-content {
  max-width: 900px;
  margin: 0 auto;
}

.alt-section-bg {
  background: #f5f5f5;
}

/* Flash Messages */
.flash-message {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 16px 20px;
  border-radius: 8px;
  font-weight: 500;
  font-size: 15px;
}

.flash-notice {
  background-color: #d4edda;
  border: 1px solid #c3e6cb;
  color: #155724;
}

.flash-alert {
  background-color: #f8d7da;
  border: 1px solid #f5c6cb;
  color: #721c24;
}

/* Contact Options */
.contact-options {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30px;
}

.contact-card {
  background: white;
  padding: 40px 30px;
  border-radius: 8px;
  border: 1px solid #e5e5e5;
  text-align: center;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.contact-card:hover {
  transform: translateY(-3px);
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
}

.card-number {
  font-size: 80px;
  font-weight: 700;
  color: rgba(240, 177, 61, 0.08);
  position: absolute;
  top: 10px;
  right: 20px;
  line-height: 1;
}

.contact-icon {
  width: 70px;
  height: 70px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20px;
  font-size: 28px;
}

.consultation-icon {
  background: rgba(240, 177, 61, 0.1);
  color: rgb(200, 140, 40);
}

.inquiry-icon {
  background: rgba(26, 26, 26, 0.08);
  color: #1a1a1a;
}

.contact-card h3 {
  font-size: 20px;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 12px;
  position: relative;
  z-index: 1;
}

.contact-card p {
  font-size: 14px;
  color: #666;
  line-height: 1.6;
  margin-bottom: 25px;
  position: relative;
  z-index: 1;
}

.contact-btn {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  padding: 14px 28px;
  border-radius: 6px;
  font-size: 15px;
  font-weight: 600;
  text-decoration: none;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
  z-index: 1;
}

.primary-btn {
  background: linear-gradient(135deg, rgb(240, 177, 61) 0%, rgb(200, 140, 40) 100%);
  color: white;
  box-shadow: 0 4px 15px rgba(240, 177, 61, 0.3);
}

.primary-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(240, 177, 61, 0.4);
  color: white;
  text-decoration: none;
}

.secondary-btn {
  background: #1a1a1a;
  color: white;
}

.secondary-btn:hover {
  background: #333;
  transform: translateY(-2px);
}

/* Form Card */
.form-card {
  background: white;
  padding: 40px;
  border-radius: 8px;
  border: 1px solid #e5e5e5;
  position: relative;
  overflow: hidden;
}

.form-card h2 {
  font-size: 24px;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 30px;
  position: relative;
  z-index: 1;
}

/* Form Elements */
.form-group {
  margin-bottom: 20px;
  position: relative;
  z-index: 1;
}

.form-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20px;
}

.form-row .form-group {
  margin-bottom: 0;
}

.form-label {
  display: inline-block;
  margin-bottom: 8px;
  font-weight: 600;
  color: #333;
  font-size: 14px;
}

.required-badge {
  display: inline-block;
  background: rgb(240, 177, 61);
  color: white;
  font-size: 11px;
  font-weight: 600;
  padding: 2px 8px;
  border-radius: 4px;
  margin-left: 8px;
  vertical-align: middle;
}

.optional-badge {
  display: inline-block;
  background: #999;
  color: white;
  font-size: 11px;
  font-weight: 600;
  padding: 2px 8px;
  border-radius: 4px;
  margin-left: 8px;
  vertical-align: middle;
}

.form-control {
  width: 100%;
  padding: 14px 16px;
  border: 2px solid #e5e5e5;
  border-radius: 6px;
  font-size: 15px;
  transition: all 0.3s ease;
  background: #fafafa;
}

.form-control:focus {
  outline: none;
  border-color: rgb(240, 177, 61);
  background: white;
  box-shadow: 0 0 0 3px rgba(240, 177, 61, 0.1);
}

.form-control::placeholder {
  color: #aaa;
}

textarea.form-control {
  resize: vertical;
  min-height: 120px;
}

/* Form Notice */
.form-notice {
  display: flex;
  align-items: flex-start;
  gap: 15px;
  background: #fff9e6;
  border: 1px solid #ffe066;
  border-radius: 8px;
  padding: 20px;
  margin: 25px 0;
  position: relative;
  z-index: 1;
}

.form-notice .notice-icon {
  color: #cc9900;
  font-size: 20px;
  margin-top: 2px;
}

.form-notice .notice-content strong {
  display: block;
  color: #996600;
  font-weight: 600;
  margin-bottom: 8px;
}

.form-notice .notice-content p {
  margin: 0;
  color: #666;
  font-size: 14px;
  line-height: 1.6;
}

/* Submit Button */
.form-submit {
  text-align: center;
  margin-top: 30px;
}

.submit-btn {
  background: linear-gradient(135deg, rgb(240, 177, 61) 0%, rgb(200, 140, 40) 100%);
  color: white;
  border: none;
  padding: 16px 45px;
  border-radius: 6px;
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(240, 177, 61, 0.3);
}

.submit-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(240, 177, 61, 0.4);
}

.submit-btn:disabled {
  background: #ccc;
  cursor: not-allowed;
  transform: none;
  box-shadow: none;
}

/* Final Note */
.final-note-bg {
  background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  color: white;
}

.footer-note {
  text-align: center;
  padding: 0 20px;
}

.footer-note p {
  font-size: 15px;
  color: rgba(255, 255, 255, 0.9);
  margin: 0;
}

/* Responsive */
@media (max-width: 768px) {
  .hero-title {
    font-size: 32px;
  }

  .hero-section {
    padding: 60px 20px;
  }

  .section-wrapper {
    padding: 40px 15px;
  }

  .contact-options {
    grid-template-columns: 1fr;
    gap: 20px;
  }

  .contact-card {
    padding: 30px 20px;
  }

  .card-number {
    font-size: 60px;
    right: 15px;
  }

  .form-card {
    padding: 30px 20px;
  }

  .form-row {
    grid-template-columns: 1fr;
    gap: 0;
  }

  .form-row .form-group {
    margin-bottom: 20px;
  }

  .submit-btn {
    width: 100%;
  }
}

@media (max-width: 480px) {
  .hero-title {
    font-size: 28px;
  }

  .form-card h2 {
    font-size: 20px;
  }

  .form-notice {
    flex-direction: column;
    gap: 10px;
  }
}
</style>

<script>
function showContactForm() {
  const formSection = document.getElementById('contactForm');
  formSection.style.display = 'block';
  formSection.scrollIntoView({ behavior: 'smooth' });
}

document.addEventListener('DOMContentLoaded', function() {
  const contactForm = document.getElementById('contactFormElement');

  if (contactForm) {
    contactForm.addEventListener('submit', function(e) {
      const submitBtn = contactForm.querySelector('.submit-btn');
      if (submitBtn) {
        submitBtn.value = '送信中...';
        submitBtn.disabled = true;
      }
      return true;
    });
  }
});
</script>
