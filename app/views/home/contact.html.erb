<div class="contact-container">
  <!-- フラッシュメッセージ -->
  <% if flash[:notice] %>
    <div class="flash-message flash-notice">
      <i class="fas fa-check-circle"></i>
      <%= flash[:notice] %>
    </div>
    <script>
      // 成功メッセージがある場合、フォームを自動的に隠す
      document.addEventListener('DOMContentLoaded', function() {
        const contactForm = document.getElementById('contactForm');
        if (contactForm) {
          contactForm.style.display = 'none';
        }
      });
    </script>
  <% end %>

  <% if flash[:alert] %>
    <div class="flash-message flash-alert">
      <i class="fas fa-exclamation-triangle"></i>
      <%= flash[:alert] %>
    </div>
  <% end %>

  <!-- ページヘッダー -->
  <div class="contact-header">
    <div class="header-content">
      <div class="header-icon">
        <i class="fas fa-envelope"></i>
      </div>
      <h1>お問い合わせ</h1>
      <p>ご質問やご要望がございましたら、お気軽にお問い合わせください</p>
    </div>
  </div>

  <!-- お問い合わせ方法の選択肢 -->
  <div class="contact-options">
    <div class="contact-option">
      <div class="option-icon">
        <i class="fas fa-comments"></i>
      </div>
      <div class="option-content">
        <h3>留学相談をご希望の方</h3>
        <p>アメリカ大学留学について専門アドバイザーに相談したい方はこちら</p>
        <a href="/consultations/new" class="option-btn consultation-btn">
          <i class="fas fa-calendar-check"></i>
          無料相談を予約する
        </a>
      </div>
    </div>
    
    <div class="contact-option">
      <div class="option-icon">
        <i class="fas fa-question-circle"></i>
      </div>
      <div class="option-content">
        <h3>その他のお問い合わせ</h3>
        <p>サイトの使い方やその他のご質問がある方はこちら</p>
        <button class="option-btn contact-btn" onclick="showContactForm()">
          <i class="fas fa-paper-plane"></i>
          お問い合わせフォーム
        </button>
      </div>
    </div>
  </div>

  <!-- お問い合わせフォーム -->
  <div id="contactForm" class="contact-form-section" style="display: none;">
    <div class="form-container">
      <h2><i class="fas fa-edit"></i> お問い合わせフォーム</h2>
      
      <%= form_with url: contact_path, method: :post, local: true, id: "contactFormElement", class: "contact-form", data: { turbo: false } do |form| %>
        <div class="form-group">
          <%= form.label :name, "お名前*", class: "form-label" %>
          <%= form.text_field :name, class: "form-control", placeholder: "山田 太郎", required: true %>
        </div>

        <div class="form-row">
          <div class="form-group half-width">
            <%= form.label :email, "メールアドレス*", class: "form-label" %>
            <%= form.email_field :email, class: "form-control", placeholder: "example@email.com", required: true %>
          </div>
          <div class="form-group half-width">
            <%= form.label :phone, "電話番号", class: "form-label" %>
            <%= form.text_field :phone, class: "form-control", placeholder: "090-1234-5678" %>
          </div>
        </div>

        <div class="form-group">
          <%= form.label :category, "件名*", class: "form-label" %>
          <%= form.select :category, [
            ["件名を選択してください", ""],
            ["サイトの使用方法について", "site-usage"],
            ["技術的な問題・不具合", "site-bug"],
            ["大学データの更新依頼", "data-error"],
            ["新機能のご要望", "feature-request"],
            ["その他", "other"]
          ], {}, { class: "form-control", required: true } %>
        </div>

        <div class="form-group">
          <%= form.label :message, "お問い合わせ内容*", class: "form-label" %>
          <%= form.text_area :message, class: "form-control", rows: 6, placeholder: "お問い合わせ内容を詳しくお聞かせください。", required: true %>
        </div>

        <!-- フォーム内注意事項 -->
        <div class="form-notice">
          <div class="form-notice-content">
            <i class="fas fa-exclamation-circle"></i>
            <div class="form-notice-text">
              <p><strong>個別の留学相談について：</strong></p>
              <p>アメリカの大学に関するご質問や個人的な留学相談については、上記の「無料相談を予約する」からお申し込みください。こちらのお問い合わせフォームでは、サイトの使い方や技術的な問題等についてのみ対応しております。</p>
            </div>
          </div>
        </div>

        <div class="form-submit">
          <%= form.submit "送信する", class: "submit-btn" %>
        </div>
      <% end %>
    </div>
  </div>

</div>

<style>
.contact-container {
  max-width: 800px;
  margin: 0 auto;
  padding: 20px;
}

/* フラッシュメッセージ */
.flash-message {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 16px 20px;
  border-radius: 8px;
  margin-bottom: 20px;
  font-weight: 500;
  font-size: 1rem;
}

.flash-notice {
  background-color: #d4edda;
  border: 1px solid #c3e6cb;
  color: #155724;
}

.flash-notice i {
  color: #155724;
}

.flash-alert {
  background-color: #f8d7da;
  border: 1px solid #f5c6cb;
  color: #721c24;
}

.flash-alert i {
  color: #721c24;
}

/* ページヘッダー */
.contact-header {
  text-align: center;
  margin-bottom: 40px;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  border-radius: 20px;
  padding: 40px 30px;
  border: 1px solid #e2e8f0;
  position: relative;
  overflow: hidden;
}

.contact-header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(59, 130, 246, 0.05) 0%, transparent 70%);
  animation: gentleFloat 8s ease-in-out infinite;
}

@keyframes gentleFloat {
  0%, 100% { transform: translate(-50%, -50%) rotate(0deg); }
  50% { transform: translate(-50%, -50%) rotate(180deg); }
}

.header-content {
  position: relative;
  z-index: 1;
}

.header-icon {
  width: 80px;
  height: 80px;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20px;
  box-shadow: 0 8px 24px rgba(59, 130, 246, 0.3);
}

.header-icon i {
  font-size: 2rem;
  color: white;
}

.contact-header h1 {
  font-size: 2.2rem;
  font-weight: 700;
  color: #2d3748;
  margin-bottom: 10px;
  letter-spacing: -0.5px;
}

.contact-header p {
  font-size: 1.1rem;
  color: #4a5568;
  margin: 0;
  opacity: 0.8;
}

/* お問い合わせオプション */
.contact-options {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  gap: 25px;
  margin-bottom: 50px;
}

.contact-option {
  background: white;
  border-radius: 16px;
  padding: 30px;
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
  border: 1px solid #e2e8f0;
  transition: all 0.3s ease;
  text-align: center;
}

.contact-option:hover {
  transform: translateY(-3px);
  box-shadow: 0 12px 30px rgba(0, 0, 0, 0.12);
}

.option-icon {
  width: 70px;
  height: 70px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20px;
  font-size: 2rem;
}

.contact-option:first-child .option-icon {
  background: linear-gradient(135deg, #ff9224 0%, #ff7a00 100%);
  color: white;
}

.contact-option:last-child .option-icon {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: white;
}

.option-content h3 {
  font-size: 1.3rem;
  font-weight: 700;
  color: #2d3748;
  margin-bottom: 10px;
}

.option-content p {
  color: #4a5568;
  font-size: 1rem;
  line-height: 1.5;
  margin-bottom: 25px;
}

.option-btn {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  padding: 14px 28px;
  border-radius: 50px;
  font-size: 1rem;
  font-weight: 600;
  text-decoration: none;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
}

.consultation-btn {
  background: linear-gradient(135deg, #ff9224 0%, #ff7a00 100%);
  color: white;
  box-shadow: 0 4px 15px rgba(255, 122, 0, 0.3);
}

.consultation-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(255, 122, 0, 0.4);
  text-decoration: none;
  color: white;
}

.contact-btn {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: white;
  box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
}

.contact-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(59, 130, 246, 0.4);
}

/* お問い合わせフォーム */
.contact-form-section {
  margin: 40px 0;
}

.form-container {
  background: white;
  border-radius: 16px;
  padding: 40px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  border: 1px solid #e2e8f0;
}

.form-container h2 {
  color: #2d3748;
  font-size: 1.5rem;
  margin-bottom: 30px;
  display: flex;
  align-items: center;
  gap: 10px;
}

.form-container h2 i {
  color: #3b82f6;
}

.form-group {
  margin-bottom: 20px;
}

.form-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20px;
}

.half-width {
  margin-bottom: 0;
}

.form-label {
  display: block;
  margin-bottom: 8px;
  font-weight: 600;
  color: #2d3748;
  font-size: 0.9rem;
}

.form-control {
  width: 100%;
  padding: 12px 16px;
  border: 2px solid #e2e8f0;
  border-radius: 8px;
  font-size: 1rem;
  transition: all 0.3s ease;
  background: #f7fafc;
}

.form-control:focus {
  outline: none;
  border-color: #3b82f6;
  background: white;
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.form-control::placeholder {
  color: #a0aec0;
}

textarea.form-control {
  resize: vertical;
  min-height: 120px;
}

.form-submit {
  text-align: center;
  margin-top: 30px;
}

.submit-btn {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: white;
  border: none;
  padding: 16px 40px;
  border-radius: 50px;
  font-size: 1.1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
  display: inline-flex;
  align-items: center;
  gap: 10px;
}

.submit-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(59, 130, 246, 0.4);
}

/* フォーム内注意事項 */
.form-notice {
  background: #fef3c7;
  border: 1px solid #f59e0b;
  border-radius: 8px;
  padding: 16px;
  margin: 20px 0;
}

.form-notice-content {
  display: flex;
  align-items: flex-start;
  gap: 12px;
}

.form-notice-content i {
  color: #f59e0b;
  font-size: 1.1rem;
  margin-top: 2px;
  flex-shrink: 0;
}

.form-notice-text p {
  color: #92400e;
  font-size: 0.9rem;
  line-height: 1.5;
  margin-bottom: 8px;
}

.form-notice-text p:last-child {
  margin-bottom: 0;
}

.form-notice-text strong {
  font-weight: 700;
}

/* モバイル対応 */
@media (max-width: 768px) {
  .contact-container {
    padding: 15px;
  }

  .contact-header {
    padding: 30px 20px;
    margin-bottom: 30px;
  }

  .contact-header h1 {
    font-size: 1.8rem;
  }

  .header-icon {
    width: 70px;
    height: 70px;
    margin-bottom: 15px;
  }

  .header-icon i {
    font-size: 1.8rem;
  }

  .contact-options {
    grid-template-columns: 1fr;
    gap: 20px;
    margin-bottom: 40px;
  }

  .contact-option {
    padding: 25px 20px;
  }

  .option-icon {
    width: 60px;
    height: 60px;
    font-size: 1.8rem;
  }

  .form-container {
    padding: 25px 20px;
  }

  .form-row {
    grid-template-columns: 1fr;
    gap: 0;
  }

  .half-width {
    margin-bottom: 20px;
  }

}

@media (max-width: 480px) {
  .contact-header {
    padding: 25px 15px;
  }

  .contact-header h1 {
    font-size: 1.6rem;
  }

  .contact-option {
    padding: 20px 15px;
  }

  .form-container {
    padding: 20px 15px;
  }
}
</style>

<script>
function showContactForm() {
  const formSection = document.getElementById('contactForm');
  formSection.style.display = 'block';
  formSection.scrollIntoView({ behavior: 'smooth' });
}

// フォーム送信時のボタン状態管理
document.addEventListener('DOMContentLoaded', function() {
  const contactForm = document.getElementById('contactFormElement');
  
  if (contactForm) {
    contactForm.addEventListener('submit', function(e) {
      console.log('フォーム送信イベント発生');
      const submitBtn = contactForm.querySelector('.submit-btn');
      if (submitBtn) {
        submitBtn.value = '送信中...';
        submitBtn.disabled = true;
      }
      // フォーム送信を継続
      return true;
    });
  }
});
</script>