<% content_for :title, "コラム - 留学準備に役立つ情報" %>
<% content_for :description, "留学準備に役立つコラム記事一覧。コミュニティカレッジの基礎知識から費用、編入方法まで、留学に必要な情報をお届けします。" %>
<% content_for :keywords, "コラム, 留学, コミュニティカレッジ, 留学費用, 編入, 留学準備" %>

<!-- OGP設定 -->
<% content_for :og_title, "コラム - 留学準備に役立つ情報" %>
<% content_for :og_description, "留学準備に役立つコラム記事一覧。コミュニティカレッジの基礎知識から費用、編入方法まで、留学に必要な情報をお届けします。" %>
<% content_for :og_type, "website" %>
<% content_for :og_url, columns_url %>

<!-- Twitter Card設定 -->
<% content_for :twitter_title, "コラム - 留学準備に役立つ情報" %>
<% content_for :twitter_description, "留学準備に役立つコラム記事一覧。コミュニティカレッジの基礎知識から費用、編入方法まで、留学に必要な情報をお届けします。" %>

<!-- コラム一覧の構造化データ -->
<% content_for :structured_data do %>
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "コラム - 留学準備に役立つ情報",
  "description": "留学準備に役立つコラム記事一覧。コミュニティカレッジの基礎知識から費用、編入方法まで、留学に必要な情報をお届けします。",
  "url": "<%= columns_url %>",
  "publisher": {
    "@type": "Organization",
    "name": "College Spark",
    "url": "<%= request.base_url %>"
  },
  "mainEntity": {
    "@type": "ItemList",
    "itemListElement": [
      <% @columns.each_with_index do |column, index| %>
      {
        "@type": "ListItem",
        "position": <%= index + 1 %>,
        "item": {
          "@type": "Article",
          "name": "<%= j column[:title] %>",
          "description": "<%= j truncate(column[:excerpt], length: 100) %>",
          "url": "<%= page_url(page: column[:slug]) %>",
          "author": {
            "@type": "Person",
            "name": "<%= j column[:author] %>"
          },
          "datePublished": "<%= Date.parse(column[:published_at]).iso8601 rescue nil %>",
          "publisher": {
            "@type": "Organization",
            "name": "College Spark"
          }
        }
      }<%= index < @columns.length - 1 ? ',' : '' %>
      <% end %>
    ]
  }
}
</script>
<% end %>

<div class="column-page">
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-content">
      <h1 class="hero-title">コラム</h1>
      <p class="hero-subtitle">Column</p>
      <div class="hero-divider"></div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="column-main">
    <div class="column-container">
      <!-- タブ -->
      <div class="category-tabs">
        <button class="tab-btn active" data-filter="all">すべて</button>
        <button class="tab-btn" data-filter="コミカレ">コミカレ</button>
      </div>

      <!-- 記事一覧 -->
      <div class="articles-grid">
        <% @columns.each do |column| %>
          <%= link_to column[:url], class: "article-card", data: { tags: column[:tags]&.join(",") } do %>
            <div class="card-category"><%= column[:category] %></div>
            <h2 class="card-title"><%= column[:title] %></h2>
            <p class="card-excerpt"><%= truncate(column[:excerpt], length: 100) %></p>
            <div class="card-footer">
              <span class="card-author"><%= column[:author] %></span>
              <time class="card-date"><%= column[:published_at] %></time>
            </div>
          <% end %>
        <% end %>
      </div>

      <% if @columns.empty? %>
        <div class="no-articles">
          <p>記事がありません。</p>
        </div>
      <% end %>
    </div>
  </section>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const tabs = document.querySelectorAll('.tab-btn');
    const cards = document.querySelectorAll('.article-card');

    tabs.forEach(tab => {
      tab.addEventListener('click', function() {
        // タブのアクティブ状態を切り替え
        tabs.forEach(t => t.classList.remove('active'));
        this.classList.add('active');

        const filter = this.dataset.filter;

        // カードのフィルタリング
        cards.forEach(card => {
          if (filter === 'all') {
            card.style.display = 'block';
          } else {
            const tags = card.dataset.tags || '';
            if (tags.includes(filter)) {
              card.style.display = 'block';
            } else {
              card.style.display = 'none';
            }
          }
        });
      });
    });
  });
</script>

<style>
  .column-page {
    min-height: 100vh;
    background: #ffffff;
  }

  /* Hero Section */
  .hero-section {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    padding: 80px 20px;
    text-align: center;
    color: white;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-title {
    font-size: 48px;
    font-weight: 700;
    margin: 0 0 10px;
    letter-spacing: -0.5px;
  }

  .hero-subtitle {
    font-size: 18px;
    font-weight: 300;
    opacity: 0.8;
    letter-spacing: 2px;
    text-transform: uppercase;
    margin: 0;
  }

  .hero-divider {
    width: 60px;
    height: 3px;
    background: rgb(240, 177, 61);
    margin: 30px auto 0;
  }

  /* Main Content */
  .column-main {
    padding: 60px 20px;
  }

  .column-container {
    max-width: 1000px;
    margin: 0 auto;
  }

  /* Category Tabs */
  .category-tabs {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-bottom: 40px;
    justify-content: center;
  }

  .tab-btn {
    padding: 10px 20px;
    border: 1px solid #e5e5e5;
    background: white;
    border-radius: 25px;
    font-size: 14px;
    font-weight: 500;
    color: #666;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .tab-btn:hover {
    border-color: #1a1a1a;
    color: #1a1a1a;
  }

  .tab-btn.active {
    background: #1a1a1a;
    border-color: #1a1a1a;
    color: white;
  }

  /* Articles Grid */
  .articles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 24px;
  }

  .article-card {
    display: block;
    background: white;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    padding: 30px;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    position: relative;
  }

  .article-card:hover {
    border-color: #1a1a1a;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    text-decoration: none;
  }

  .article-card:hover .card-title {
    color: rgb(240, 177, 61);
  }

  .card-category {
    display: inline-block;
    font-size: 12px;
    font-weight: 600;
    color: rgb(200, 140, 40);
    margin-bottom: 12px;
    letter-spacing: 0.5px;
  }

  .card-title {
    font-size: 18px;
    font-weight: 700;
    color: #1a1a1a;
    line-height: 1.5;
    margin: 0 0 12px;
    transition: color 0.2s ease;
  }

  .card-excerpt {
    font-size: 14px;
    color: #666;
    line-height: 1.7;
    margin: 0 0 20px;
  }

  .card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 16px;
    border-top: 1px solid #f0f0f0;
  }

  .card-author {
    font-size: 13px;
    color: #999;
  }

  .card-date {
    font-size: 13px;
    color: #999;
  }

  /* No Articles */
  .no-articles {
    text-align: center;
    padding: 60px 20px;
    color: #999;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-section {
      padding: 60px 20px;
    }

    .hero-title {
      font-size: 36px;
    }

    .column-main {
      padding: 40px 16px;
    }

    .category-tabs {
      gap: 8px;
    }

    .tab-btn {
      padding: 8px 16px;
      font-size: 13px;
    }

    .articles-grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .article-card {
      padding: 24px 20px;
    }

    .card-title {
      font-size: 16px;
    }
  }
</style>