              <div class="detail-grid">
                <div class="detail-item">
                  <i class="fas fa-dollar-sign"></i>
                  <div>
                    <strong>支給額</strong>
                    <span>年間最大 AUD 15,000</span>
                  </div>
                </div>
                <div class="detail-item">
                  <i class="fas fa-clock"></i>
                  <div>
                    <strong>期間</strong>
                    <span>最大4年間</span>
                  </div>
                </div>
                <div class="detail-item">
                  <i class="fas fa-map"></i>
                  <div>
                    <strong>対象地域</strong>
                    <span>地方都市キャンパス</span>
                  </div>
                </div>
                <div class="detail-item">
                  <i class="fas fa-graduation-cap"></i>
                  <div>
                    <strong>学位レベル</strong>
                    <span>学部・大学院・博士課程</span>
                  </div>
                </div>
              </div>
