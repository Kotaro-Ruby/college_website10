  // Professional Tuition Slider
  const minSlider = document.getElementById('min-tuition-slider');
  const maxSlider = document.getElementById('max-tuition-slider');
  const rangeDisplay = document.getElementById('tuition-range-display');
  const minHidden = document.getElementById('min-tuition-hidden');
