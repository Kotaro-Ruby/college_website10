        }, 100);
      })
      .catch(error => {
        console.error('Error:', error);
      });
    }
  }
  
  if (minSlider && maxSlider) {
    // Initialize
    updateSliderRange();
    
    // Add event listeners with proper triggering
    minSlider.addEventListener('input', function() {
      console.log('Min slider moved to:', this.value);
      updateSliderRange('min');
    });
    
    maxSlider.addEventListener('input', function() {
      console.log('Max slider moved to:', this.value);
      updateSliderRange('max');
    });
    
    // Submit form on change (when user releases the slider)
    minSlider.addEventListener('change', function() {
      console.log('Min slider changed to:', this.value);
      updateSliderRange('min');
      submitForm();
    });
    
    maxSlider.addEventListener('change', function() {
      console.log('Max slider changed to:', this.value);
      updateSliderRange('max');
      submitForm();
    });
  }
  
  // Handle other filter changes
  const filterSelects = document.querySelectorAll('.filter-select');
  filterSelects.forEach(select => {
    select.addEventListener('change', submitForm);
  });
  
  // Handle field checkboxes
  const fieldCheckboxes = document.querySelectorAll('.field-checkbox-sidebar');
  fieldCheckboxes.forEach(checkbox => {
