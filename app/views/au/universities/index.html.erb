  }
  
  function updateSliderRange(triggeredBy = null) {
    if (!minSlider || !maxSlider || !sliderRange) return;
    
    let min = parseInt(minSlider.value);
    let max = parseInt(maxSlider.value);
    const sliderMax = parseInt(minSlider.max);
    
    // Prevent crossing - adjust the other slider if needed
    if (triggeredBy === 'min' && min > max) {
      max = min;
      maxSlider.value = max;
    } else if (triggeredBy === 'max' && max < min) {
      min = max;
      minSlider.value = min;
    } else if (!triggeredBy && min > max) {
      // Initial load or programmatic update
      max = min;
      maxSlider.value = max;
    }
    
    // Update display
    if (rangeDisplay) {
      rangeDisplay.textContent = '$' + min.toLocaleString() + ' - $' + max.toLocaleString();
    }
    
    // Update hidden fields
    if (minHidden) minHidden.value = min;
    if (maxHidden) maxHidden.value = max;
    
    // Update range visualization
    const minPercent = (min / sliderMax) * 100;
    const maxPercent = (max / sliderMax) * 100;
    sliderRange.style.left = minPercent + '%';
    sliderRange.style.width = (maxPercent - minPercent) + '%';
  }
  
  function submitForm() {
    const filterForm = document.querySelector('.filter-form');
    if (filterForm) {
      // Collect all form data including checkboxes
      const formData = new FormData(filterForm);
      const params = new URLSearchParams();
      
      // Add all form fields to params
      for (let [key, value] of formData.entries()) {
        params.append(key, value);
      }
      
      const url = filterForm.action + '?' + params.toString();
      
      fetch(url, {
        headers: {
          'Accept': 'text/html',
          'X-Requested-With': 'XMLHttpRequest'
        }
      })
      .then(response => response.text())
      .then(html => {
        // Parse the response and update the entire page content
        const parser = new DOMParser();
        const doc = parser.parseFromString(html, 'text/html');
        
        // Update results section
        const newResults = doc.querySelector('.results-section');
        const currentResults = document.querySelector('.results-section');
        if (newResults && currentResults) {
          currentResults.innerHTML = newResults.innerHTML;
        }
        
        // Update filters section to maintain state
        const newFilters = doc.querySelector('.filters-section');
        const currentFilters = document.querySelector('.filters-section');
        if (newFilters && currentFilters) {
          currentFilters.innerHTML = newFilters.innerHTML;
        }
        
        // Update URL without page reload
        window.history.pushState({}, '', url);
        
        // Re-initialize event listeners after updating content
        setTimeout(() => {
          initializeFilters();
          initializeImageSliders();
          initializeSortSelect();
        }, 100);
      })
      .catch(error => {
        console.error('Error:', error);
      });
    }
  }
  
  if (minSlider && maxSlider) {
    // Initialize
    updateSliderRange();
    
    // Add event listeners with proper triggering
    minSlider.addEventListener('input', function() {
      updateSliderRange('min');
    });
    
    maxSlider.addEventListener('input', function() {
      updateSliderRange('max');
    });
    
    // Submit form on change (when user releases the slider)
    minSlider.addEventListener('change', function() {
      updateSliderRange('min');
      submitForm();
    });
    
    maxSlider.addEventListener('change', function() {
      updateSliderRange('max');
      submitForm();
    });
  }
  
  // Handle other filter changes
  const filterSelects = document.querySelectorAll('.filter-select');
  filterSelects.forEach(select => {
    select.addEventListener('change', submitForm);
  });
  
  // Handle field checkboxes
  const fieldCheckboxes = document.querySelectorAll('.field-checkbox-sidebar');
  fieldCheckboxes.forEach(checkbox => {
    checkbox.addEventListener('change', submitForm);
