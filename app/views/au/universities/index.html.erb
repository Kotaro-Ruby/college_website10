  function updateSliderRange(triggeredBy = null) {
    if (!minSlider || !maxSlider || !sliderRange) return;
    
    let min = parseInt(minSlider.value);
    let max = parseInt(maxSlider.value);
    const sliderMax = parseInt(minSlider.max);
    
    // Prevent crossing - adjust the other slider if needed
    if (triggeredBy === 'min' && min > max) {
      max = min;
      maxSlider.value = max;
    } else if (triggeredBy === 'max' && max < min) {
      min = max;
      minSlider.value = min;
    } else if (!triggeredBy && min > max) {
      // Initial load or programmatic update
      max = min;
      maxSlider.value = max;
    }
    
    // Update display
    if (rangeDisplay) {
      rangeDisplay.textContent = '$' + min.toLocaleString() + ' - $' + max.toLocaleString();
    }
    
    // Update hidden fields
    if (minHidden) minHidden.value = min;
    if (maxHidden) maxHidden.value = max;
    
    // Update range visualization
    const minPercent = (min / sliderMax) * 100;
    const maxPercent = (max / sliderMax) * 100;
    sliderRange.style.left = minPercent + '%';
    sliderRange.style.width = (maxPercent - minPercent) + '%';
  }
  
