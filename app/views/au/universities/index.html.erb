<div class="au-universities-page">
  <!-- Hero Section with Australian Theme -->
  <div class="au-hero-section">
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <div class="hero-badge">Australian Universities</div>
      <h1 class="hero-title">オーストラリア大学検索</h1>
      <p class="hero-subtitle">世界トップクラスの教育と素晴らしい生活環境</p>
      <div class="hero-stats">
        <div class="hero-stat">
          <span class="stat-number">39</span>
          <span class="stat-text">総合大学</span>
        </div>
        <div class="hero-stat">
          <span class="stat-number">7</span>
          <span class="stat-text">世界TOP100</span>
        </div>
        <div class="hero-stat">
          <span class="stat-number">70万+</span>
          <span class="stat-text">留学生</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Links Bar -->
  <div class="quick-links-bar">
    <a href="/au/about" class="quick-link">
      <i class="fas fa-info-circle"></i>
      <span>オーストラリア留学について</span>
    </a>
    <a href="/au/group-of-eight" class="quick-link">
      <i class="fas fa-star"></i>
      <span>Group of Eight</span>
    </a>
    <a href="/au/popular-cities" class="quick-link">
      <i class="fas fa-city"></i>
      <span>人気都市</span>
    </a>
    <a href="/au/scholarships" class="quick-link">
      <i class="fas fa-graduation-cap"></i>
      <span>奨学金情報</span>
    </a>
  </div>

  <div class="main-container two-column-layout">
    <!-- Search Section -->
    <div class="search-section">
      <%= form_with url: search_au_universities_path, method: :get, local: false, class: "search-form", data: { remote: true, type: "html" } do |f| %>
        <div class="search-wrapper">
          <div class="search-input-group">
            <i class="fas fa-search search-icon"></i>
            <%= text_field_tag :q, params[:q], 
                placeholder: "大学名、都市、専攻分野で検索...", 
                class: "search-input" %>
            <%= submit_tag "検索", class: "search-button" %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Filters Section -->
    <div class="filters-section" id="filters-section">
      <div class="filters-header">
        <h3><i class="fas fa-filter"></i> 絞り込み検索</h3>
        <button class="filters-toggle" id="filters-toggle" aria-label="フィルターを開閉">
          <i class="fas fa-chevron-down"></i>
        </button>
      </div>
      <%= form_with url: au_universities_path, method: :get, local: false, class: "filter-form", data: { remote: true, type: "html" } do |f| %>
        <div class="filter-grid">
          <div class="filter-item">
            <label><i class="fas fa-map-marked-alt"></i> 州・地域</label>
            <%= select_tag :state, 
                options_for_select([
                  ['すべての州', ''],
                  ['New South Wales (シドニー)', 'NSW'],
                  ['Victoria (メルボルン)', 'VIC'],
                  ['Queensland (ブリスベン・ゴールドコースト)', 'QLD'],
                  ['Western Australia (パース)', 'WA'],
                  ['South Australia (アデレード)', 'SA'],
                  ['Australian Capital Territory (キャンベラ)', 'ACT'],
                  ['Tasmania (ホバート)', 'TAS'],
                  ['Northern Territory (ダーウィン)', 'NT']
                ], params[:state]),
                class: "filter-select" %>
          </div>

          <div class="filter-item">
            <label class="filter-label">
              年間授業料:
            </label>
            <div class="tuition-display">
              <span id="tuition-range-display">$<%= params[:min_tuition] || 0 %> - $<%= params[:max_tuition] || 80000 %></span>
            </div>
            <div class="professional-slider-container">
              <div class="slider-wrapper">
                <input type="range" id="min-tuition-slider" min="0" max="80000" step="1000" 
                       value="<%= params[:min_tuition].present? ? params[:min_tuition] : 0 %>" class="tuition-slider min-slider">
                <input type="range" id="max-tuition-slider" min="0" max="80000" step="1000" 
                       value="<%= params[:max_tuition].present? ? params[:max_tuition] : 80000 %>" class="tuition-slider max-slider">
                <div class="slider-track"></div>
                <div class="slider-range" id="slider-range"></div>
              </div>
              <div class="slider-labels">
                <span class="slider-label">$0</span>
                <span class="slider-label">$20k</span>
                <span class="slider-label">$40k</span>
                <span class="slider-label">$60k</span>
                <span class="slider-label">$80k</span>
              </div>
              <%= hidden_field_tag :min_tuition, params[:min_tuition].present? ? params[:min_tuition] : 0, id: "min-tuition-hidden" %>
              <%= hidden_field_tag :max_tuition, params[:max_tuition].present? ? params[:max_tuition] : 80000, id: "max-tuition-hidden" %>
            </div>
          </div>

          <div class="filter-item">
            <label><i class="fas fa-graduation-cap"></i> 専攻分野</label>
            <div class="field-checkboxes-sidebar">
              <% [
                  ['01 - Natural and Physical Sciences', '自然科学・物理科学'],
                  ['02 - Information Technology', '情報技術'],
                  ['03 - Engineering and Related Technologies', '工学・関連技術'],
                  ['04 - Architecture and Building', '建築・建設'],
                  ['05 - Agriculture, Environmental and Related Studies', '農業・環境'],
                  ['06 - Health', '健康・医療'],
                  ['07 - Education', '教育'],
                  ['08 - Management and Commerce', '経営・商学'],
                  ['09 - Society and Culture', '社会・文化'],
                  ['10 - Creative Arts', '創造芸術']
                ].each do |field_value, field_ja| %>
                <label class="field-checkbox-label-sidebar">
                  <%= check_box_tag 'fields[]', field_value,
                      (params[:fields] || []).include?(field_value),
                      class: "field-checkbox-sidebar" %>
                  <span class="field-text"><%= field_ja %></span>
                </label>
              <% end %>
            </div>
          </div>

        </div>
      <% end %>
    </div>

    <!-- Results Section -->
    <div class="results-section">
      <div class="results-header">
        <h2 class="results-title">
          <span class="results-count"><%= @total_count %></span>校の大学
        </h2>
        <div class="results-controls">
          <select id="sort-select" class="sort-select">
            <option value="name" <%= 'selected' if params[:sort] == 'name' || params[:sort].blank? %>>大学名（A-Z）</option>
            <option value="students" <%= 'selected' if params[:sort] == 'students' %>>学生数が多い順</option>
            <option value="courses" <%= 'selected' if params[:sort] == 'courses' %>>コース数が多い順</option>
          </select>
          <div class="view-options">
            <button class="view-option active" data-view="grid">
              <i class="fas fa-th"></i>
            </button>
            <button class="view-option" data-view="list">
              <i class="fas fa-list"></i>
            </button>
          </div>
        </div>
      </div>

      <div class="universities-grid">
        <% @universities.each do |university| %>
          <div class="university-card">
            <% if ['The University of Melbourne', 'The University of Sydney', 'The University of Queensland'].include?(university.name) %>
              <div class="card-badge">TOP University</div>
            <% end %>
            
            <% if university.images.present? %>
              <% images = JSON.parse(university.images) %>
              <% if images.length > 1 %>
                <div class="card-image-slider" data-university-id="<%= university.id %>">
                  <div class="slider-container">
                    <div class="slider-wrapper">
                      <% images.each_with_index do |image, index| %>
                        <div class="slider-slide <%= 'active' if index == 0 %>">
                          <% if image.start_with?('http', '/images/') %>
                            <img src="<%= image %>" alt="<%= university.name %> Campus <%= index + 1 %>">
                          <% else %>
                            <% clean_path = image.start_with?('/assets/') ? image.sub('/assets/', '') : image %>
                            <%= image_tag clean_path, alt: "#{university.name} Campus #{index + 1}" %>
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                    <button class="slider-btn slider-prev" data-university="<%= university.id %>">
                      <i class="fas fa-chevron-left"></i>
                    </button>
                    <button class="slider-btn slider-next" data-university="<%= university.id %>">
                      <i class="fas fa-chevron-right"></i>
                    </button>
                    <div class="slider-dots">
                      <% images.each_with_index do |_, index| %>
                        <span class="dot <%= 'active' if index == 0 %>" data-slide="<%= index %>"></span>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% else %>
                <div class="card-image">
                  <% if images.first.start_with?('http', '/images/') %>
                    <img src="<%= images.first %>" alt="<%= university.name %>">
                  <% else %>
                    <% clean_path = images.first.start_with?('/assets/') ? images.first.sub('/assets/', '') : images.first %>
                    <%= image_tag clean_path, alt: university.name %>
                  <% end %>
                </div>
              <% end %>
              <div class="image-note-small">
                ※ 画像は自動取得されているため、関連性の低いものが含まれる場合があります。
              </div>
            <% end %>
            
            <div class="card-content">
              <div class="university-header">
                <h3 class="university-name">
                  <%= link_to university.name, au_university_path(university) %>
                </h3>
                <div class="university-location">
                  <i class="fas fa-map-marker-alt"></i>
                  <%= university.city %>, <%= university.state %>
                </div>
              </div>
              
              <div class="university-stats">
                <div class="stat-item">
                  <div class="stat-icon">
                    <i class="fas fa-users"></i>
                  </div>
                  <div class="stat-info">
                    <div class="stat-value">
                      <%= number_with_delimiter(university.total_students_2023 || 0) %>
                    </div>
                    <div class="stat-label">総学生数</div>
                  </div>
                </div>
                
                <div class="stat-item">
                  <div class="stat-icon">
                    <i class="fas fa-globe-asia"></i>
                  </div>
                  <div class="stat-info">
                    <div class="stat-value">
                      <% if university.overseas_percentage %>
                        <%= university.overseas_percentage.round(0) %>%
                      <% else %>
                        -
                      <% end %>
                    </div>
                    <div class="stat-label">留学生比率</div>
                  </div>
                </div>
                
                <div class="stat-item">
                  <div class="stat-icon">
                    <i class="fas fa-book"></i>
                  </div>
                  <div class="stat-info">
                    <div class="stat-value">
                      <%= number_with_delimiter(university.total_courses_count) %>
                    </div>
                    <div class="stat-label">コース数</div>
                  </div>
                </div>
              </div>

              <div class="tuition-section">
                <div class="tuition-label">
                  <i class="fas fa-dollar-sign"></i> 年間授業料
                </div>
                <div class="tuition-amount">
                  <% if university.min_annual_tuition && university.max_annual_tuition %>
                    <span class="currency">AUD</span>
                    <span class="price-range">
                      $<%= number_with_delimiter(university.min_annual_tuition.to_i) %> - $<%= number_with_delimiter(university.max_annual_tuition.to_i) %>
                    </span>
                  <% else %>
                    <span class="no-data">データなし</span>
                  <% end %>
                </div>
              </div>

              <% if university.popular_fields.present? %>
                <div class="popular-fields">
                  <div class="fields-label">
                    <i class="fas fa-star"></i> 人気の専攻分野
                  </div>
                  <div class="field-pills">
                    <% university.popular_fields.split(',').first(3).each do |field| %>
                      <span class="field-pill"><%= field.strip %></span>
                    <% end %>
                  </div>
                </div>
              <% end %>

              <div class="card-actions">
                <%= link_to au_university_path(university), class: "action-btn primary" do %>
                  詳細を見る
                  <i class="fas fa-arrow-right"></i>
                <% end %>
                <% if university.website.present? %>
                  <%= link_to university.website, target: "_blank", rel: "noopener", class: "action-btn secondary" do %>
                    <%= URI.parse(university.website).host %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

  </div>
  
  <div class="page-footer-note" style="max-width: 1200px; margin: 20px auto; padding: 16px 20px; background: #fef3c7; border-radius: 8px; border-left: 4px solid #f59e0b;">
    <p style="margin: 0; color: #92400e; font-size: 13px; line-height: 1.6;">
      <strong>※画像について:</strong> 掲載されている画像は、Wikimedia Commons APIを使用して自動取得されたものです。大学名での検索結果を表示しているため、実際のキャンパスと異なる場合や関連性の低い画像が含まれている可能性があります。
    </p>
  </div>
</div>

