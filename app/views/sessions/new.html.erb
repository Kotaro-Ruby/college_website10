<div class="main">
  <div class="login-container">
    <!-- Page Header -->
    <div class="page-header">
      <h1>ログイン</h1>
      <p>College Finderにログインしてください</p>
    </div>

    <!-- Login Form -->
    <div class="login-content">
      <%= form_with url: login_path, method: :post, local: true, class: "login-form" do |form| %>
        <div class="form-group">
          <%= form.label :username, "ユーザー名", class: "form-label" %>
          <%= form.text_field :username, class: "form-input", required: true %>
        </div>

        <div class="form-group">
          <%= form.label :password, "パスワード", class: "form-label" %>
          <%= form.password_field :password, class: "form-input", required: true %>
        </div>

        <div class="form-group">
          <%= form.submit "ログイン", class: "submit-button" %>
        </div>
      <% end %>
    </div>

    <!-- Back to Home -->
    <div class="back-to-home">
      <%= link_to "トップページに戻る", root_path, class: "back-button" %>
    </div>
  </div>
</div>

<style>
  .login-container {
    max-width: 500px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  .page-header {
    text-align: center;
    margin-bottom: 40px;
    padding: 30px 20px;
    background: linear-gradient(135deg, rgb(240, 177, 61) 0%, rgb(255, 195, 85) 100%);
    color: white;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(240, 177, 61, 0.2);
  }

  .page-header h1 {
    font-size: 36px;
    font-weight: 700;
    margin-bottom: 10px;
  }

  .page-header p {
    font-size: 16px;
    opacity: 0.9;
  }

  .login-content {
    background: white;
    padding: 40px;
    border-radius: 15px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
    margin-bottom: 30px;
  }

  .login-form {
    max-width: 400px;
    margin: 0 auto;
  }

  .form-group {
    margin-bottom: 25px;
  }

  .form-label {
    display: block;
    font-weight: 600;
    margin-bottom: 8px;
    color: #2d3748;
    font-size: 16px;
  }

  .form-input {
    width: 100%;
    padding: 12px 16px;
    border: 2px solid #e2e8f0;
    border-radius: 8px;
    font-size: 16px;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
    background-color: #fff;
  }

  .form-input:focus {
    outline: none;
    border-color: rgb(240, 177, 61);
    box-shadow: 0 0 0 3px rgba(240, 177, 61, 0.1);
  }

  .submit-button {
    background: linear-gradient(135deg, rgb(240, 177, 61) 0%, rgb(255, 195, 85) 100%);
    color: white;
    border: none;
    padding: 15px 40px;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    width: 100%;
    box-shadow: 0 4px 15px rgba(240, 177, 61, 0.3);
  }

  .submit-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(240, 177, 61, 0.4);
  }

  .back-to-home {
    text-align: center;
  }

  .back-button {
    display: inline-block;
    padding: 12px 30px;
    background: #f8f9fa;
    color: #6c757d;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 500;
    transition: all 0.3s ease;
    border: 1px solid #dee2e6;
  }

  .back-button:hover {
    background: #e9ecef;
    color: #495057;
    text-decoration: none;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .login-container {
      padding: 20px 10px;
    }

    .page-header h1 {
      font-size: 28px;
    }

    .login-content {
      padding: 25px 20px;
    }
  }
</style>