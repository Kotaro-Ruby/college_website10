      <div class="detail-card">
        <h2>平均GPA</h2>
        <p>3.1</p>
      </div>
      <div class="detail-card">
        <h2>NCAA Division</h2>
        <p>Division Ⅰ</p>
      </div>
      <div class="detail-card">
        <h2>卒業率</h2>
        <p>70%</p>
      </div>
    </div>

    <!-- ranking と 部活を横並びに -->
    <div class="ranking-activities-box">
      <!-- U.S. News & World Report ランキングボックス -->
      <div class="ranking-box"></div>

      <!-- 部活情報ボックス -->
      <div class="activities-box">
        <h2>部活</h2>
        <p>ここに部活を追加</p>
      </div>
    </div>

    <!-- 専攻ボックス -->
    <div class="major-box">
      <h2>専攻</h2>
      <p>ここに専攻を追加</p>
    </div>
    

    <!-- 戻るボタン -->
    <a href="javascript:goBackToResults();" class="back-button">検索結果に戻る</a>
    
    <script>
    function goBackToResults() {
      // Referrerが検索結果ページの場合は戻る、そうでなければ検索結果ページに移動
      if (document.referrer && document.referrer.includes('/results')) {
        window.history.back();
      } else {
        window.location.href = '/results';
      }
    }
    </script>
  </div>

  <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_GOOGLE_MAPS_API_KEY&callback=initMap" async defer></script>
</body>
</html>