          const nationalAverage = 81;
          
          new Chart(retentionCtx, {
            type: 'bar',
            data: {
              labels: ['1Âπ¥ÁîüÁ∂ôÁ∂öÁéá'],
              datasets: [{
                label: '„Åì„ÅÆÂ§ßÂ≠¶',
                data: [retentionRate],
                backgroundColor: retentionRate >= 80 ? 'rgba(34, 197, 94, 0.8)' : 
                                  retentionRate >= 70 ? 'rgba(251, 146, 60, 0.8)' : 'rgba(239, 68, 68, 0.8)',
