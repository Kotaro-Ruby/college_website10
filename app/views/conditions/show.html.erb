                  callbacks: {
                    label: function(context) {
                      const rate = context.parsed.x;
                      const dataset = context.dataset.label;
                      
                      let evaluation = '';
                      if (dataset === '„Åì„ÅÆÂ§ßÂ≠¶') {
                        if (rate >= 80) evaluation = 'ËâØÂ•Ω';
                        else if (rate >= 70) evaluation = 'Âπ≥ÂùáÁöÑ';
                        else evaluation = 'Ë¶ÅÊ≥®ÊÑè';
                        
