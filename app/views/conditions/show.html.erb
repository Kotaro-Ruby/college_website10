                        const comparison = diff > 0 ? `ÂÖ®Á±≥Âπ≥Âùá„Çà„Çä${diff.toFixed(1)}%È´ò„ÅÑ` : 
                                         diff < 0 ? `ÂÖ®Á±≥Âπ≥Âùá„Çà„Çä${Math.abs(diff).toFixed(1)}%‰Ωé„ÅÑ` : 
                                         'ÂÖ®Á±≥Âπ≥Âùá„Å®Âêå„Åò';
                        
                        return [
