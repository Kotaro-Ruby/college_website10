<div class="consultation-form-container">
  <!-- ページヘッダー -->
  <div class="page-header">
    <div class="header-content">
      <div class="header-icon">
        <i class="fas fa-graduation-cap"></i>
      </div>
      <h1>無料留学相談</h1>
      <p>専門アドバイザーがあなたの留学をサポートします</p>
    </div>
  </div>

  <div class="consultation-benefits">
    <div class="benefit-item">
      <i class="fas fa-user-graduate"></i>
      <div>
        <h3>経験豊富なアドバイザー</h3>
        <p>アメリカ大学留学のエキスパートが直接対応</p>
      </div>
    </div>
    <div class="benefit-item">
      <i class="fas fa-clock"></i>
      <div>
        <h3>じっくり相談できる時間</h3>
        <p>30分〜1時間、あなたのペースで相談可能</p>
      </div>
    </div>
    <div class="benefit-item">
      <i class="fas fa-laptop"></i>
      <div>
        <h3>オンライン対応</h3>
        <p>ご自宅から気軽にご参加いただけます</p>
      </div>
    </div>
  </div>

  <div class="consultation-form-wrapper" id="consultation-form">
    <%= form_with model: @consultation, local: true, class: "consultation-form" do |form| %>
      <% if @consultation.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(@consultation.errors.count, "error") %> prohibited this consultation from being saved:</h4>
          <ul>
            <% @consultation.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-section">
        <h2><i class="fas fa-user"></i> 基本情報</h2>
        
        <div class="form-group">
          <%= form.label :name, "お名前*", class: "form-label" %>
          <%= form.text_field :name, class: "form-control", placeholder: "山田 太郎" %>
        </div>

        <div class="form-row">
          <div class="form-group half-width">
            <%= form.label :email, "メールアドレス*", class: "form-label" %>
            <%= form.email_field :email, class: "form-control", placeholder: "example@email.com" %>
          </div>
          <div class="form-group half-width">
            <%= form.label :phone, "電話番号*", class: "form-label" %>
            <%= form.text_field :phone, class: "form-control", placeholder: "090-1234-5678" %>
          </div>
        </div>
      </div>

      <div class="form-section">
        <h2><i class="fas fa-calendar"></i> 希望日時（複数候補選択可）</h2>
        
        <%= form.hidden_field :timezone, value: "JST" %>

        <div class="datetime-options">
          <p class="datetime-description">希望する日時を最大3つまで選択してください（優先順位順）</p>
          <div class="time-restriction-notice">
            <i class="fas fa-clock"></i>
            <div>
              <strong>相談可能時間（日本時間 JST）:</strong>
              <ul>
                <li>平日: 20:00〜23:00</li>
                <li>土日祝日: 9:00〜21:00</li>
              </ul>
            </div>
          </div>
          
          <div class="datetime-candidates" id="datetime-candidates">
            <div class="datetime-candidate">
              <div class="candidate-header">
                <span class="candidate-priority">第1希望</span>
                <span class="required-mark">*</span>
              </div>
              <div class="form-row">
                <div class="form-group half-width">
                  <%= form.label "preferred_dates[]", "希望日", class: "form-label" %>
                  <%= date_field_tag "consultation[preferred_dates][]", nil, class: "form-control date-input", min: Date.today, required: true %>
                </div>
                <div class="form-group half-width">
                  <%= form.label "preferred_times[]", "希望時間（日本時間）", class: "form-label" %>
                  <%= select_tag "consultation[preferred_times][]", options_for_select([
                    ["時間を選択してください", ""]
                  ]), { class: "form-control time-select", required: true } %>
                </div>
              </div>
            </div>

            <div class="datetime-candidate" style="display: none;">
              <div class="candidate-header">
                <span class="candidate-priority">第2希望</span>
                <button type="button" class="remove-candidate-btn" onclick="removeCandidate(this)">×</button>
              </div>
              <div class="form-row">
                <div class="form-group half-width">
                  <%= form.label "preferred_dates[]", "希望日", class: "form-label" %>
                  <%= date_field_tag "consultation[preferred_dates][]", nil, class: "form-control date-input", min: Date.today %>
                </div>
                <div class="form-group half-width">
                  <%= form.label "preferred_times[]", "希望時間（日本時間）", class: "form-label" %>
                  <%= select_tag "consultation[preferred_times][]", options_for_select([
                    ["時間を選択してください", ""]
                  ]), { class: "form-control time-select" } %>
                </div>
              </div>
            </div>

            <div class="datetime-candidate" style="display: none;">
              <div class="candidate-header">
                <span class="candidate-priority">第3希望</span>
                <button type="button" class="remove-candidate-btn" onclick="removeCandidate(this)">×</button>
              </div>
              <div class="form-row">
                <div class="form-group half-width">
                  <%= form.label "preferred_dates[]", "希望日", class: "form-label" %>
                  <%= date_field_tag "consultation[preferred_dates][]", nil, class: "form-control date-input", min: Date.today %>
                </div>
                <div class="form-group half-width">
                  <%= form.label "preferred_times[]", "希望時間（日本時間）", class: "form-label" %>
                  <%= select_tag "consultation[preferred_times][]", options_for_select([
                    ["時間を選択してください", ""]
                  ]), { class: "form-control time-select" } %>
                </div>
              </div>
            </div>
          </div>

          <div class="add-candidate-section">
            <button type="button" class="add-candidate-btn" onclick="addCandidate()">
              <i class="fas fa-plus"></i> 希望候補を追加
            </button>
          </div>
        </div>
      </div>

      <div class="form-section">
        <h2><i class="fas fa-comments"></i> 相談内容</h2>
        
        <div class="form-group">
          <%= form.label :consultation_type, "相談タイプ*", class: "form-label" %>
          <%= form.select :consultation_type, [
            ["大学留学全般", "general"],
            ["大学選び", "university_selection"],
            ["出願サポート", "application_support"],
            ["奨学金相談", "scholarship"],
            ["ビザ相談", "visa"],
            ["その他", "other"]
          ], { prompt: "相談タイプを選択してください" }, { class: "form-control" } %>
        </div>

        <div class="form-group">
          <%= form.label :message, "詳細・ご質問*", class: "form-label" %>
          <%= form.text_area :message, class: "form-control", rows: 6, placeholder: "相談したい内容を詳しくお聞かせください。" %>
        </div>

        <div class="consultation-notice">
          <div class="notice-icon">
            <i class="fas fa-info-circle"></i>
          </div>
          <div class="notice-content">
            <p><strong>ご注意：</strong>こちらの相談は留学全般に関するアドバイスのみとなります。特定の大学に関する詳細な質問や個別の大学に関する相談は承っておりません。</p>
          </div>
        </div>
      </div>

      <div class="form-submit">
        <%= form.submit "無料相談を予約する", class: "submit-btn" %>
      </div>
    <% end %>
  </div>

  <div class="consultation-note">
    <div class="note-content">
      <i class="fas fa-info-circle"></i>
      <div>
        <h3>ご予約について</h3>
        <ul>
          <li>予約確認後、24時間以内にメールでご連絡いたします</li>
          <li>相談はZoom、Google Meetなどのオンラインツールで行います</li>
          <li>相談は完全無料です。費用は一切かかりません</li>
          <li>キャンセルの場合は、予約日の前日までにご連絡ください</li>
        </ul>
      </div>
    </div>
  </div>
</div>

