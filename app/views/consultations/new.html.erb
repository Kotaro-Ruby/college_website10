<script>
let candidateCount = 1;
const maxCandidates = 3;

function addCandidate() {
  if (candidateCount >= maxCandidates) {
    return;
  }

  const candidates = document.querySelectorAll('.datetime-candidate');
  const nextCandidate = candidates[candidateCount];

  if (nextCandidate) {
    nextCandidate.style.display = 'block';
    candidateCount++;

    const dateInput = nextCandidate.querySelector('.date-input');
    if (dateInput && dateInput.value) {
      updateTimeOptions(dateInput);
    }

    updateAddButton();
  }
}

function removeCandidate(button) {
  const candidate = button.closest('.datetime-candidate');
  const candidates = document.querySelectorAll('.datetime-candidate');
  const candidateIndex = Array.from(candidates).indexOf(candidate);

  if (candidateIndex > 0) {
    candidate.style.display = 'none';

    const dateInput = candidate.querySelector('input[type="date"]');
    const timeSelect = candidate.querySelector('select');
    if (dateInput) dateInput.value = '';
    if (timeSelect) timeSelect.value = '';

    candidateCount--;
    updateAddButton();
  }
}

function updateAddButton() {
  const addButton = document.querySelector('.add-candidate-btn');
  if (addButton) {
    if (candidateCount >= maxCandidates) {
      addButton.disabled = true;
      addButton.innerHTML = '<i class="fas fa-check"></i> 最大3つまで選択済み';
    } else {
      addButton.disabled = false;
      addButton.innerHTML = '<i class="fas fa-plus"></i> 希望候補を追加';
    }
  }
}

document.addEventListener('turbo:load', initializeConsultationForm);
document.addEventListener('DOMContentLoaded', initializeConsultationForm);

function initializeConsultationForm() {
  if (window.consultationFormInitialized) {
    return;
  }
  window.consultationFormInitialized = true;

  updateAddButton();

  const timeSelects = document.querySelectorAll('.time-select');

  timeSelects.forEach(function(timeSelect) {
    timeSelect.innerHTML = '';

    const defaultOption = document.createElement('option');
    defaultOption.value = '';
    defaultOption.textContent = '時間を選択してください';
    timeSelect.appendChild(defaultOption);

    const weekdayTimes = [
      '20:00-21:00 (平日)',
      '21:00-22:00 (平日)',
      '22:00-23:00 (平日)'
    ];

    weekdayTimes.forEach(function(time) {
      const option = document.createElement('option');
      option.value = time.split(' ')[0];
      option.textContent = time;
      timeSelect.appendChild(option);
    });

    const weekendTimes = [
      '9:00-10:00 (土日祝)',
      '10:00-11:00 (土日祝)',
      '11:00-12:00 (土日祝)',
      '12:00-13:00 (土日祝)',
      '13:00-14:00 (土日祝)',
      '14:00-15:00 (土日祝)',
      '15:00-16:00 (土日祝)',
      '16:00-17:00 (土日祝)',
      '17:00-18:00 (土日祝)',
      '18:00-19:00 (土日祝)',
      '19:00-20:00 (土日祝)',
      '20:00-21:00 (土日祝)'
    ];

    weekendTimes.forEach(function(time) {
      const option = document.createElement('option');
      option.value = time.split(' ')[0];
      option.textContent = time;
      timeSelect.appendChild(option);
    });
  });

  document.body.addEventListener('change', function(e) {
    if (e.target.type === 'date' || e.target.classList.contains('date-input')) {
      updateTimeOptions(e.target);
    }
  });

  document.body.addEventListener('input', function(e) {
    if (e.target.type === 'date' || e.target.classList.contains('date-input')) {
      updateTimeOptions(e.target);
    }
  });

  setTimeout(function() {
    const dateInputs = document.querySelectorAll('input[type="date"], .date-input');

    dateInputs.forEach(function(dateInput) {
      dateInput.addEventListener('change', function(e) {
        updateTimeOptions(e.target);
      });
    });
  }, 100);
}

function updateTimeOptions(dateInput) {
  const selectedDate = new Date(dateInput.value);
  if (!selectedDate || isNaN(selectedDate)) {
    return;
  }

  const dayOfWeek = selectedDate.getDay();
  const isWeekend = (dayOfWeek === 0 || dayOfWeek === 6);

  const candidate = dateInput.closest('.datetime-candidate');
  const timeSelect = candidate.querySelector('.time-select');

  if (!timeSelect) {
    return;
  }

  timeSelect.innerHTML = '<option value="">時間を選択してください</option>';

  let timeOptions = [];

  if (isWeekend) {
    timeOptions = [
      ["9:00-10:00", "9:00-10:00"],
      ["10:00-11:00", "10:00-11:00"],
      ["11:00-12:00", "11:00-12:00"],
      ["12:00-13:00", "12:00-13:00"],
      ["13:00-14:00", "13:00-14:00"],
      ["14:00-15:00", "14:00-15:00"],
      ["15:00-16:00", "15:00-16:00"],
      ["16:00-17:00", "16:00-17:00"],
      ["17:00-18:00", "17:00-18:00"],
      ["18:00-19:00", "18:00-19:00"],
      ["19:00-20:00", "19:00-20:00"],
      ["20:00-21:00", "20:00-21:00"]
    ];
  } else {
    timeOptions = [
      ["20:00-21:00", "20:00-21:00"],
      ["21:00-22:00", "21:00-22:00"],
      ["22:00-23:00", "22:00-23:00"]
    ];
  }

  timeOptions.forEach(function(option) {
    const optionElement = document.createElement('option');
    optionElement.value = option[1];
    optionElement.textContent = option[0];
    timeSelect.appendChild(optionElement);
  });
}
