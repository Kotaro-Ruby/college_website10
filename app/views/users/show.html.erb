<% content_for :title, "マイページ | College Spark" %>

<div class="profile-page">
  <!-- Hero Section -->
  <section class="profile-hero">
    <div class="hero-content">
      <div class="profile-avatar-large">
        <% if @user.image.present? %>
          <%= image_tag @user.image, alt: @user.username, class: "avatar-image" %>
        <% else %>
          <div class="avatar-placeholder">
            <%= @user.username[0].upcase %>
          </div>
        <% end %>
      </div>
      <h1 class="profile-title"><%= @user.username %></h1>
      <p class="profile-subtitle">My Page</p>
      <div class="hero-divider"></div>
      <div class="profile-meta-hero">
        <span class="meta-item">
          <svg class="icon" viewBox="0 0 20 20" fill="currentColor">
            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
          </svg>
          <%= @user.email || "メールアドレス未設定" %>
        </span>
        <span class="meta-item">
          <svg class="icon" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
          </svg>
          <%= @user.created_at.strftime("%Y年%m月%d日") %>に登録
        </span>
      </div>
    </div>
  </section>

  <!-- Quick Actions Section -->
  <section class="section-wrapper">
    <div class="section-content">
      <div class="section-header">
        <h2>クイックアクセス</h2>
        <p class="section-description">Quick Access</p>
      </div>
      <div class="action-grid">
        <a href="/favorites" class="action-card">
          <div class="action-icon favorites">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
            </svg>
          </div>
          <div class="action-content">
            <h3>お気に入り</h3>
            <p>保存した大学を確認</p>
          </div>
          <svg class="arrow" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
        </a>

        <a href="/compare" class="action-card">
          <div class="action-icon compare">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="3" width="18" height="18" rx="2"/>
              <line x1="9" y1="3" x2="9" y2="21"/>
              <line x1="15" y1="3" x2="15" y2="21"/>
            </svg>
          </div>
          <div class="action-content">
            <h3>比較リスト</h3>
            <p>大学を比較検討</p>
          </div>
          <svg class="arrow" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
        </a>

        <a href="/search" class="action-card">
          <div class="action-icon search">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="11" cy="11" r="8"/>
              <path d="M21 21l-4.35-4.35"/>
            </svg>
          </div>
          <div class="action-content">
            <h3>大学検索</h3>
            <p>条件に合う大学を探す</p>
          </div>
          <svg class="arrow" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
        </a>

        <a href="/rankings" class="action-card">
          <div class="action-icon rankings">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
          </div>
          <div class="action-content">
            <h3>ランキング</h3>
            <p>人気大学をチェック</p>
          </div>
          <svg class="arrow" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Account Settings Section -->
  <section class="section-wrapper section-alt">
    <div class="section-content">
      <div class="section-header">
        <h2>アカウント設定</h2>
        <p class="section-description">Account Settings</p>
      </div>

      <div class="settings-card">
        <div class="settings-grid">
          <div class="setting-item">
            <div class="setting-label">ユーザーID</div>
            <div class="setting-value">#<%= @user.id %></div>
          </div>
          <div class="setting-item">
            <div class="setting-label">ユーザー名</div>
            <div class="setting-value"><%= @user.username %></div>
          </div>
          <div class="setting-item">
            <div class="setting-label">メールアドレス</div>
            <div class="setting-value"><%= @user.email || "未設定" %></div>
          </div>
          <% if @user.provider.present? %>
          <div class="setting-item">
            <div class="setting-label">認証方法</div>
            <div class="setting-value">
              <span class="provider-badge">
                <% if @user.provider == 'google_oauth2' %>
                  <svg class="provider-icon" viewBox="0 0 24 24">
                    <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                    <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                    <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                    <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                  </svg>
                  Google
                <% else %>
                  <%= @user.provider.capitalize %>
                <% end %>
              </span>
            </div>
          </div>
          <% end %>
        </div>

        <div class="action-buttons">
          <a href="/profile/edit" class="btn btn-primary">
            <svg class="btn-icon" viewBox="0 0 20 20" fill="currentColor">
              <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
            </svg>
            プロフィール編集
          </a>
          <button type="button" class="btn btn-danger-outline" onclick="showDeleteModal()">
            <svg class="btn-icon" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"/>
            </svg>
            アカウント削除
          </button>
        </div>
      </div>
    </div>
  </section>
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="modal-overlay" style="display: none;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h3>アカウントの削除</h3>
        <button type="button" class="modal-close" onclick="hideDeleteModal()">
          <svg viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
          </svg>
        </button>
      </div>
      <div class="modal-body">
        <div class="warning-icon">
          <svg viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
          </svg>
        </div>
        <p class="modal-message">本当にアカウントを削除しますか？</p>
        <p class="modal-warning">この操作は取り消すことができません。<br>すべてのデータが完全に削除されます。</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-cancel" onclick="hideDeleteModal()">キャンセル</button>
        <%= form_with url: profile_path, method: :delete, local: true, class: "delete-form" do |f| %>
          <%= f.submit "削除する", class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
/* Base */
.profile-page {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  background: #ffffff;
}

/* Hero Section */
.profile-hero {
  background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  padding: 80px 20px;
  text-align: center;
  color: white;
}

.hero-content {
  max-width: 800px;
  margin: 0 auto;
}

.profile-avatar-large {
  width: 120px;
  height: 120px;
  margin: 0 auto 24px;
}

.profile-avatar-large .avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
  border: 4px solid rgba(255, 255, 255, 0.2);
}

.profile-avatar-large .avatar-placeholder {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: linear-gradient(135deg, #3d3d3d 0%, #4d4d4d 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.9);
  border: 4px solid rgba(255, 255, 255, 0.2);
}

.profile-title {
  font-size: 36px;
  font-weight: 700;
  margin: 0 0 8px 0;
  letter-spacing: -0.5px;
}

.profile-subtitle {
  font-size: 16px;
  font-weight: 300;
  opacity: 0.7;
  letter-spacing: 2px;
  text-transform: uppercase;
  margin: 0;
}

.hero-divider {
  width: 60px;
  height: 3px;
  background: rgb(240, 177, 61);
  margin: 24px auto;
}

.profile-meta-hero {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 24px;
  margin-top: 16px;
}

.profile-meta-hero .meta-item {
  display: flex;
  align-items: center;
  gap: 8px;
  color: rgba(255, 255, 255, 0.8);
  font-size: 14px;
}

.profile-meta-hero .icon {
  width: 16px;
  height: 16px;
  opacity: 0.7;
}

/* Section Styles */
.section-wrapper {
  padding: 80px 20px;
}

.section-alt {
  background: #f5f5f5;
}

.section-content {
  max-width: 1000px;
  margin: 0 auto;
}

.section-header {
  text-align: center;
  margin-bottom: 50px;
}

.section-header h2 {
  font-size: 32px;
  font-weight: 700;
  color: #1a1a1a;
  margin: 0 0 12px 0;
}

.section-description {
  font-size: 14px;
  color: #888;
  text-transform: uppercase;
  letter-spacing: 2px;
  font-weight: 400;
  margin: 0;
}

/* Action Cards */
.action-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 20px;
}

.action-card {
  background: white;
  border-radius: 12px;
  padding: 24px;
  display: flex;
  align-items: center;
  gap: 16px;
  text-decoration: none;
  transition: all 0.3s ease;
  border: 1px solid #e5e5e5;
  position: relative;
}

.action-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.12);
  border-color: rgb(240, 177, 61);
}

.action-icon {
  width: 52px;
  height: 52px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.action-icon svg {
  width: 26px;
  height: 26px;
}

.action-icon.favorites {
  background: linear-gradient(135deg, #fff5f5 0%, #ffe5e5 100%);
  color: #ef4444;
}

.action-icon.compare {
  background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
  color: #3b82f6;
}

.action-icon.search {
  background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
  color: #22c55e;
}

.action-icon.rankings {
  background: linear-gradient(135deg, #fffbeb 0%, #fef3c7 100%);
  color: rgb(240, 177, 61);
}

.action-content {
  flex: 1;
}

.action-content h3 {
  font-size: 16px;
  font-weight: 600;
  color: #1a1a1a;
  margin: 0 0 4px 0;
}

.action-content p {
  font-size: 13px;
  color: #888;
  margin: 0;
}

.action-card .arrow {
  width: 20px;
  height: 20px;
  color: #ccc;
  transition: all 0.3s ease;
}

.action-card:hover .arrow {
  color: rgb(240, 177, 61);
  transform: translateX(4px);
}

/* Settings Card */
.settings-card {
  background: white;
  border-radius: 12px;
  padding: 40px;
  border: 1px solid #e5e5e5;
}

.settings-grid {
  display: grid;
  gap: 16px;
  margin-bottom: 32px;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 24px;
  background: #fafafa;
  border-radius: 8px;
  border: 1px solid #eee;
}

.setting-label {
  font-size: 14px;
  color: #666;
  font-weight: 500;
}

.setting-value {
  font-size: 14px;
  color: #1a1a1a;
  font-weight: 600;
}

.provider-badge {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 6px 12px;
  background: white;
  border: 1px solid #e5e5e5;
  border-radius: 6px;
  font-size: 13px;
}

.provider-icon {
  width: 16px;
  height: 16px;
}

/* Buttons */
.action-buttons {
  display: flex;
  gap: 16px;
  flex-wrap: wrap;
}

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  padding: 12px 24px;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 600;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
  text-decoration: none;
  font-family: inherit;
}

.btn-icon {
  width: 18px;
  height: 18px;
}

.btn-primary {
  background: linear-gradient(135deg, rgb(240, 177, 61) 0%, rgb(220, 157, 41) 100%);
  color: white;
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(240, 177, 61, 0.4);
}

.btn-danger-outline {
  background: white;
  color: #dc3545;
  border: 2px solid #dc3545;
}

.btn-danger-outline:hover {
  background: #dc3545;
  color: white;
}

.btn-danger {
  background: #dc3545;
  color: white;
}

.btn-danger:hover {
  background: #c82333;
}

.btn-cancel {
  background: #e9ecef;
  color: #495057;
}

.btn-cancel:hover {
  background: #dee2e6;
}

/* Modal */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  backdrop-filter: blur(4px);
}

.modal-dialog {
  width: 100%;
  max-width: 440px;
  margin: 0 20px;
}

.modal-content {
  background: white;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 24px 80px rgba(0, 0, 0, 0.3);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24px 28px;
  border-bottom: 1px solid #eee;
}

.modal-header h3 {
  font-size: 18px;
  font-weight: 700;
  color: #1a1a1a;
  margin: 0;
}

.modal-close {
  width: 36px;
  height: 36px;
  border: none;
  background: #f5f5f5;
  color: #666;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8px;
  transition: all 0.2s;
}

.modal-close:hover {
  background: #eee;
  color: #333;
}

.modal-close svg {
  width: 20px;
  height: 20px;
}

.modal-body {
  padding: 40px 28px;
  text-align: center;
}

.warning-icon {
  width: 72px;
  height: 72px;
  margin: 0 auto 24px;
  background: linear-gradient(135deg, #fff5f5 0%, #ffe5e5 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.warning-icon svg {
  width: 36px;
  height: 36px;
  color: #dc3545;
}

.modal-message {
  font-size: 18px;
  font-weight: 700;
  color: #1a1a1a;
  margin: 0 0 12px 0;
}

.modal-warning {
  font-size: 14px;
  color: #666;
  margin: 0;
  line-height: 1.7;
}

.modal-footer {
  padding: 20px 28px;
  background: #f9f9f9;
  display: flex;
  gap: 12px;
  justify-content: flex-end;
}

.delete-form {
  margin: 0;
}

/* Responsive */
@media (max-width: 768px) {
  .profile-hero {
    padding: 60px 20px;
  }

  .profile-title {
    font-size: 28px;
  }

  .profile-avatar-large {
    width: 100px;
    height: 100px;
  }

  .profile-avatar-large .avatar-placeholder {
    font-size: 40px;
  }

  .profile-meta-hero {
    flex-direction: column;
    gap: 12px;
  }

  .section-wrapper {
    padding: 60px 20px;
  }

  .section-header h2 {
    font-size: 26px;
  }

  .action-grid {
    grid-template-columns: 1fr;
  }

  .settings-card {
    padding: 24px;
  }

  .setting-item {
    flex-direction: column;
    align-items: flex-start;
    gap: 8px;
  }

  .action-buttons {
    flex-direction: column;
  }

  .btn {
    width: 100%;
  }

  .modal-footer {
    flex-direction: column;
  }
}
</style>

<script>
function showDeleteModal() {
  document.getElementById('deleteModal').style.display = 'flex';
  document.body.style.overflow = 'hidden';
}

function hideDeleteModal() {
  document.getElementById('deleteModal').style.display = 'none';
  document.body.style.overflow = '';
}

// Close modal on outside click
document.getElementById('deleteModal').addEventListener('click', function(e) {
  if (e.target === this) {
    hideDeleteModal();
  }
});

// Close modal on ESC key
document.addEventListener('keydown', function(e) {
  if (e.key === 'Escape' && document.getElementById('deleteModal').style.display === 'flex') {
    hideDeleteModal();
  }
});
</script>
