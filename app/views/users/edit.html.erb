<div class="edit-profile-container">
  <div class="form-header">
    <h1>プロフィール編集</h1>
    <a href="/profile" class="back-link">
      <i class="fas fa-arrow-left"></i>
      プロフィールに戻る
    </a>
  </div>

  <div class="form-container">
    <%= form_with model: @user, url: profile_path, method: :patch, local: true, class: "profile-form" do |f| %>
      <% if @user.errors.any? %>
        <div class="error-messages">
          <h3><%= pluralize(@user.errors.count, "個のエラー") %>があります:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-section">
        <h2>プロフィール画像</h2>
        <p class="feature-note">プロフィール画像機能は現在準備中です。しばらくお待ちください。</p>
      </div>

      <div class="form-section">
        <h2>基本情報</h2>
        
        <div class="form-group">
          <%= f.label :username, "ユーザー名", class: "form-label" %>
          <%= f.text_field :username, class: "form-input", required: true %>
        </div>
      </div>

      <div class="form-section">
        <h2>パスワード変更</h2>
        <p class="form-note">パスワードを変更しない場合は空白のままにしてください</p>
        
        <div class="form-group">
          <%= f.label :password, "新しいパスワード", class: "form-label" %>
          <%= f.password_field :password, class: "form-input", placeholder: "6文字以上" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "パスワード確認", class: "form-label" %>
          <%= f.password_field :password_confirmation, class: "form-input", placeholder: "パスワードを再入力" %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.submit "更新する", class: "btn btn-primary" %>
        <a href="/profile" class="btn btn-secondary">キャンセル</a>
      </div>
    <% end %>
  </div>
</div>

<style>
.edit-profile-container {
  max-width: 600px;
  margin: 40px auto;
  padding: 0 20px;
}

.form-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32px;
}

.form-header h1 {
  font-size: 28px;
  font-weight: 700;
  color: #2d3748;
  margin: 0;
  font-family: 'Poppins', sans-serif;
}

.back-link {
  display: flex;
  align-items: center;
  gap: 8px;
  color: #f5b342;
  text-decoration: none;
  font-weight: 500;
  font-size: 14px;
  transition: color 0.3s ease;
}

.back-link:hover {
  color: #e09c2a;
}

.form-container {
  background: white;
  border-radius: 16px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.profile-form {
  padding: 32px;
}

.error-messages {
  background: #fed7d7;
  border: 1px solid #feb2b2;
  border-radius: 8px;
  padding: 16px;
  margin-bottom: 24px;
}

.error-messages h3 {
  color: #c53030;
  font-size: 16px;
  margin: 0 0 8px 0;
}

.error-messages ul {
  color: #c53030;
  margin: 0;
  padding-left: 20px;
}

.form-section {
  margin-bottom: 32px;
  padding-bottom: 24px;
  border-bottom: 1px solid #e2e8f0;
}

.form-section:last-of-type {
  border-bottom: none;
  margin-bottom: 0;
}

.form-section h2 {
  font-size: 18px;
  font-weight: 600;
  color: #2d3748;
  margin: 0 0 16px 0;
  font-family: 'Inter', sans-serif;
}

.form-note {
  color: #718096;
  font-size: 14px;
  margin: 0 0 20px 0;
  font-style: italic;
}

.form-group {
  margin-bottom: 20px;
}

.form-label {
  display: block;
  font-weight: 600;
  color: #4a5568;
  margin-bottom: 8px;
  font-size: 14px;
  font-family: 'Inter', sans-serif;
}

.form-input {
  width: 100%;
  padding: 12px 16px;
  border: 2px solid #e2e8f0;
  border-radius: 8px;
  font-size: 16px;
  transition: border-color 0.3s ease;
  font-family: 'Inter', sans-serif;
}

.form-input:focus {
  outline: none;
  border-color: #f5b342;
  box-shadow: 0 0 0 3px rgba(245, 179, 66, 0.1);
}

.form-actions {
  display: flex;
  gap: 16px;
  margin-top: 32px;
  padding-top: 24px;
  border-top: 1px solid #e2e8f0;
}

.btn {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 12px 24px;
  border-radius: 8px;
  text-decoration: none;
  font-weight: 600;
  font-size: 14px;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
  font-family: 'Inter', sans-serif;
}

.btn-primary {
  background: #f5b342;
  color: white;
}

.btn-primary:hover {
  background: #e09c2a;
  transform: translateY(-1px);
}

.btn-secondary {
  background: #e2e8f0;
  color: #4a5568;
}

.btn-secondary:hover {
  background: #cbd5e0;
}

/* レスポンシブ */
@media (max-width: 768px) {
  .edit-profile-container {
    margin: 20px auto;
    padding: 0 15px;
  }
  
  .form-header {
    flex-direction: column;
    gap: 16px;
    text-align: center;
  }
  
  .profile-form {
    padding: 24px;
  }
  
  .form-actions {
    flex-direction: column;
  }
}

/* プロフィール画像関連のスタイル */
.profile-image-section {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24px;
  align-items: start;
}

.current-image {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12px;
}

.current-profile-image {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  object-fit: cover;
  border: 3px solid #e2e8f0;
}

.no-image-placeholder {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  background: #f7fafc;
  border: 2px dashed #cbd5e0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #a0aec0;
}

.placeholder-icon {
  font-size: 36px;
  margin-bottom: 8px;
}

.no-image-placeholder p {
  margin: 0;
  font-size: 12px;
  text-align: center;
}

.image-upload {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.file-input {
  width: 100%;
  padding: 8px;
  border: 2px dashed #cbd5e0;
  border-radius: 8px;
  background: #f7fafc;
  color: #4a5568;
  font-size: 14px;
  cursor: pointer;
  transition: border-color 0.3s ease;
}

.file-input:hover {
  border-color: #f5b342;
}

.file-input:focus {
  outline: none;
  border-color: #f5b342;
  box-shadow: 0 0 0 3px rgba(245, 179, 66, 0.1);
}

.file-note {
  color: #718096;
  font-size: 12px;
  margin: 0;
  font-style: italic;
}

.image-preview {
  grid-column: 1 / -1;
  margin-top: 16px;
  padding: 16px;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  background: #f7fafc;
}

.image-preview h4 {
  margin: 0 0 12px 0;
  font-size: 14px;
  color: #4a5568;
}

.preview-image {
  max-width: 200px;
  max-height: 200px;
  border-radius: 8px;
  object-fit: cover;
  border: 2px solid #e2e8f0;
}

.feature-note {
  color: #718096;
  font-size: 14px;
  margin: 0;
  font-style: italic;
  padding: 16px;
  background: #f7fafc;
  border-radius: 8px;
  border: 1px solid #e2e8f0;
}

@media (max-width: 768px) {
  .profile-image-section {
    grid-template-columns: 1fr;
    gap: 16px;
    text-align: center;
  }
}
</style>

<script>
function previewImage(input) {
  const preview = document.getElementById('imagePreview');
  const previewImg = document.getElementById('previewImg');
  
  if (input.files && input.files[0]) {
    const reader = new FileReader();
    
    reader.onload = function(e) {
      previewImg.src = e.target.result;
      preview.style.display = 'block';
    };
    
    reader.readAsDataURL(input.files[0]);
  } else {
    preview.style.display = 'none';
  }
}
</script>