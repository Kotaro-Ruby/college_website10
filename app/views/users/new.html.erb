<div class="main">
  <div class="register-container">
    <!-- Page Header -->
    <div class="page-header">
      <h1>ユーザー登録</h1>
      <p>College Finderにご登録ください</p>
    </div>

    <!-- Registration Form -->
    <div class="register-content">
      <%= form_with url: register_path, method: :post, local: true, class: "register-form" do |form| %>
        <% if @user.errors.any? %>
          <div class="error-messages">
            <h4><%= pluralize(@user.errors.count, "つのエラー") %>があります:</h4>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :username, "ユーザー名", class: "form-label" %>
          <%= form.text_field :username, name: "user[username]", value: @user&.username, class: "form-input", required: true %>
          <small class="help-text">3文字以上50文字以下で入力してください</small>
        </div>

        <div class="form-group">
          <%= form.label :password, "パスワード", class: "form-label" %>
          <%= form.password_field :password, name: "user[password]", class: "form-input", required: true %>
          <small class="help-text">6文字以上で入力してください</small>
        </div>

        <div class="form-group">
          <%= form.label :password_confirmation, "パスワード確認", class: "form-label" %>
          <%= form.password_field :password_confirmation, name: "user[password_confirmation]", class: "form-input", required: true %>
          <small class="help-text">上記と同じパスワードを入力してください</small>
        </div>

        <div class="form-group">
          <%= form.submit "登録", class: "submit-button" %>
        </div>
      <% end %>
    </div>

    <!-- Login Link -->
    <div class="login-link-section">
      <p>すでにアカウントをお持ちの方は<%= link_to "こちら", login_path, class: "login-link" %>からログインしてください</p>
    </div>

    <!-- Back to Home -->
    <div class="back-to-home">
      <%= link_to "トップページに戻る", root_path, class: "back-button" %>
    </div>
  </div>
</div>

<style>
  .register-container {
    max-width: 500px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  .page-header {
    text-align: center;
    margin-bottom: 40px;
    padding: 30px 20px;
    background: linear-gradient(135deg, rgb(240, 177, 61) 0%, rgb(255, 195, 85) 100%);
    color: white;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(240, 177, 61, 0.2);
  }

  .page-header h1 {
    font-size: 36px;
    font-weight: 700;
    margin-bottom: 10px;
  }

  .page-header p {
    font-size: 16px;
    opacity: 0.9;
  }

  .register-content {
    background: white;
    padding: 40px;
    border-radius: 15px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
    margin-bottom: 30px;
  }

  .register-form {
    max-width: 400px;
    margin: 0 auto;
  }

  .error-messages {
    background: #fee;
    border: 1px solid #fcc;
    border-radius: 8px;
    padding: 15px;
    margin-bottom: 25px;
  }

  .error-messages h4 {
    color: #c33;
    margin: 0 0 10px 0;
    font-size: 16px;
  }

  .error-messages ul {
    margin: 0;
    padding-left: 20px;
  }

  .error-messages li {
    color: #c33;
    margin-bottom: 5px;
  }

  .form-group {
    margin-bottom: 25px;
  }

  .form-label {
    display: block;
    font-weight: 600;
    margin-bottom: 8px;
    color: #2d3748;
    font-size: 16px;
  }

  .form-input {
    width: 100%;
    padding: 12px 16px;
    border: 2px solid #e2e8f0;
    border-radius: 8px;
    font-size: 16px;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
    background-color: #fff;
  }

  .form-input:focus {
    outline: none;
    border-color: rgb(240, 177, 61);
    box-shadow: 0 0 0 3px rgba(240, 177, 61, 0.1);
  }

  .help-text {
    display: block;
    margin-top: 5px;
    font-size: 14px;
    color: #6c757d;
  }

  .submit-button {
    background: linear-gradient(135deg, rgb(240, 177, 61) 0%, rgb(255, 195, 85) 100%);
    color: white;
    border: none;
    padding: 15px 40px;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    width: 100%;
    box-shadow: 0 4px 15px rgba(240, 177, 61, 0.3);
  }

  .submit-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(240, 177, 61, 0.4);
  }

  .login-link-section {
    text-align: center;
    margin-bottom: 20px;
    padding: 20px;
    background: #f8f9fa;
    border-radius: 8px;
    border: 1px solid #dee2e6;
  }

  .login-link-section p {
    margin: 0;
    color: #495057;
  }

  .login-link {
    color: rgb(240, 177, 61);
    text-decoration: none;
    font-weight: 600;
  }

  .login-link:hover {
    text-decoration: underline;
  }

  .back-to-home {
    text-align: center;
  }

  .back-button {
    display: inline-block;
    padding: 12px 30px;
    background: #f8f9fa;
    color: #6c757d;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 500;
    transition: all 0.3s ease;
    border: 1px solid #dee2e6;
  }

  .back-button:hover {
    background: #e9ecef;
    color: #495057;
    text-decoration: none;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .register-container {
      padding: 20px 10px;
    }

    .page-header h1 {
      font-size: 28px;
    }

    .register-content {
      padding: 25px 20px;
    }
  }
</style>