<script>
  function togglePassword(fieldId, button) {
    const passwordField = document.getElementById(fieldId);
    const icon = button.querySelector('i');
    
    if (passwordField.type === 'password') {
      passwordField.type = 'text';
      icon.className = 'fas fa-eye-slash';
    } else {
      passwordField.type = 'password';
      icon.className = 'fas fa-eye';
    }
  }

  // Username availability check
  document.addEventListener('DOMContentLoaded', function() {
    const usernameField = document.getElementById('user_username');
    if (usernameField) {
      let debounceTimer;
      
      usernameField.addEventListener('input', function() {
        clearTimeout(debounceTimer);
        const username = this.value.trim();
        
        // Remove existing feedback
        const existingFeedback = this.parentNode.querySelector('.username-feedback');
        if (existingFeedback) {
          existingFeedback.remove();
        }
        
        if (username.length >= 3) {
          debounceTimer = setTimeout(() => {
            checkUsernameAvailability(username, this);
          }, 500);
        }
      });
    }
  });

  function checkUsernameAvailability(username, inputField) {
    fetch('/check_username', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
      },
      body: JSON.stringify({ username: username })
    })
    .then(response => response.json())
    .then(data => {
      const feedback = document.createElement('small');
      feedback.className = 'username-feedback';
      feedback.style.display = 'block';
      feedback.style.marginTop = '5px';
      feedback.style.fontSize = '14px';
      
      if (data.available) {
        feedback.style.color = '#28a745';
        feedback.innerHTML = '<i class="fas fa-check"></i> このユーザー名は利用できます';
      } else {
        feedback.style.color = '#dc3545';
        feedback.innerHTML = '<i class="fas fa-times"></i> このユーザー名は既に使用されています';
      }
      
      inputField.parentNode.appendChild(feedback);
    })
    .catch(error => {
      console.error('Error checking username:', error);
    });
  }
</script>