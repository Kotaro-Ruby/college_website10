<%
  page_title = params[:category].present? ? "#{params[:category]} - 留学ブログ" : "留学ブログ"
  page_description = params[:category].present? ?
    "#{params[:category]}に関する留学ブログ記事一覧。実体験に基づく情報とアドバイスをお届けします。" :
    "留学に関するブログ記事一覧。実体験に基づく情報とアドバイス、留学準備から現地生活まで幅広いトピックをお届けします。"
%>

<% content_for :title, page_title %>
<% content_for :description, page_description %>
<% content_for :keywords, "留学, ブログ, 海外留学, 体験談, 留学準備, #{params[:category]}" %>

<!-- OGP設定 -->
<% content_for :og_title, page_title %>
<% content_for :og_description, page_description %>
<% content_for :og_type, "website" %>
<% content_for :og_url, blogs_url(category: params[:category]) %>

<!-- Twitter Card設定 -->
<% content_for :twitter_title, page_title %>
<% content_for :twitter_description, page_description %>

<div class="blog-page">
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-content">
      <h1 class="hero-title">ブログ</h1>
      <p class="hero-subtitle">Blog</p>
      <div class="hero-divider"></div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="blog-main">
    <div class="blog-container">
      <!-- カテゴリータブ -->
      <div class="category-tabs">
        <%= link_to "すべて", blogs_path, class: "tab-btn #{params[:category].blank? ? 'active' : ''}" %>
        <% @categories.each do |category| %>
          <%= link_to category, blogs_path(category: category), class: "tab-btn #{params[:category] == category ? 'active' : ''}" %>
        <% end %>
      </div>

      <!-- 記事一覧 -->
      <div class="articles-grid">
        <!-- 静的記事 -->
        <% @static_articles.each do |article| %>
          <%= link_to article[:url], class: "article-card" do %>
            <div class="card-category"><%= article[:category] %></div>
            <h2 class="card-title"><%= article[:title] %></h2>
            <p class="card-excerpt"><%= truncate(article[:excerpt], length: 100) %></p>
            <div class="card-footer">
              <span class="card-author"><%= article[:author] %></span>
              <time class="card-date"><%= article[:published_at].strftime('%Y.%m.%d') %></time>
            </div>
          <% end %>
        <% end %>

        <!-- DB記事 -->
        <% @blogs.each do |blog| %>
          <%= link_to blog_path(slug: blog.slug), class: "article-card" do %>
            <div class="card-category"><%= blog.category %></div>
            <h2 class="card-title"><%= blog.title %></h2>
            <p class="card-excerpt"><%= truncate(strip_tags(blog.content), length: 100) %></p>
            <div class="card-footer">
              <span class="card-author"><%= blog.author %></span>
              <time class="card-date"><%= blog.published_at&.strftime('%Y.%m.%d') %></time>
            </div>
          <% end %>
        <% end %>
      </div>

      <% if @blogs.empty? && @static_articles.empty? %>
        <div class="no-articles">
          <p>記事がありません。</p>
        </div>
      <% end %>

      <% if @blogs.total_pages > 1 %>
        <div class="pagination-wrapper">
          <%= paginate @blogs %>
        </div>
      <% end %>
    </div>
  </section>
</div>

<style>
  .blog-page {
    min-height: 100vh;
    background: #ffffff;
  }

  /* Hero Section */
  .hero-section {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    padding: 80px 20px;
    text-align: center;
    color: white;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-title {
    font-size: 48px;
    font-weight: 700;
    margin: 0 0 10px;
    letter-spacing: -0.5px;
  }

  .hero-subtitle {
    font-size: 18px;
    font-weight: 300;
    opacity: 0.8;
    letter-spacing: 2px;
    text-transform: uppercase;
    margin: 0;
  }

  .hero-divider {
    width: 60px;
    height: 3px;
    background: rgb(240, 177, 61);
    margin: 30px auto 0;
  }

  /* Main Content */
  .blog-main {
    padding: 60px 20px;
  }

  .blog-container {
    max-width: 1000px;
    margin: 0 auto;
  }

  /* Category Tabs */
  .category-tabs {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-bottom: 40px;
    justify-content: center;
  }

  .tab-btn {
    padding: 10px 20px;
    border: 1px solid #e5e5e5;
    background: white;
    border-radius: 25px;
    font-size: 14px;
    font-weight: 500;
    color: #666;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .tab-btn:hover {
    border-color: #1a1a1a;
    color: #1a1a1a;
    text-decoration: none;
  }

  .tab-btn.active {
    background: #1a1a1a;
    border-color: #1a1a1a;
    color: white;
  }

  /* Articles Grid */
  .articles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 24px;
  }

  .article-card {
    display: block;
    background: white;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    padding: 30px;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    position: relative;
  }

  .article-card:hover {
    border-color: #1a1a1a;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    text-decoration: none;
  }

  .article-card:hover .card-title {
    color: rgb(240, 177, 61);
  }

  .card-category {
    display: inline-block;
    font-size: 12px;
    font-weight: 600;
    color: rgb(200, 140, 40);
    margin-bottom: 12px;
    letter-spacing: 0.5px;
  }

  .card-title {
    font-size: 18px;
    font-weight: 700;
    color: #1a1a1a;
    line-height: 1.5;
    margin: 0 0 12px;
    transition: color 0.2s ease;
  }

  .card-excerpt {
    font-size: 14px;
    color: #666;
    line-height: 1.7;
    margin: 0 0 20px;
  }

  .card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 16px;
    border-top: 1px solid #f0f0f0;
  }

  .card-author {
    font-size: 13px;
    color: #999;
  }

  .card-date {
    font-size: 13px;
    color: #999;
  }

  /* No Articles */
  .no-articles {
    text-align: center;
    padding: 60px 20px;
    color: #999;
  }

  /* Pagination */
  .pagination-wrapper {
    margin-top: 50px;
    display: flex;
    justify-content: center;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-section {
      padding: 60px 20px;
    }

    .hero-title {
      font-size: 36px;
    }

    .blog-main {
      padding: 40px 16px;
    }

    .category-tabs {
      gap: 8px;
    }

    .tab-btn {
      padding: 8px 16px;
      font-size: 13px;
    }

    .articles-grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .article-card {
      padding: 24px 20px;
    }

    .card-title {
      font-size: 16px;
    }
  }
</style>
