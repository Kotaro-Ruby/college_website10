<div class="admin-consultations">
  <div class="page-header">
    <h1><i class="fas fa-comments"></i> 無料相談管理</h1>
    <p>予約された無料相談の管理・確認ができます</p>
  </div>

  <!-- ステータス統計 -->
  <div class="status-cards">
    <div class="status-card <%= 'active' if params[:status].blank? %>">
      <%= link_to admin_consultations_path do %>
        <div class="card-content">
          <div class="card-number"><%= @status_counts[:all] %></div>
          <div class="card-label">全体</div>
        </div>
      <% end %>
    </div>
    <div class="status-card pending <%= 'active' if params[:status] == 'pending' %>">
      <%= link_to admin_consultations_path(status: 'pending') do %>
        <div class="card-content">
          <div class="card-number"><%= @status_counts[:pending] %></div>
          <div class="card-label">確認中</div>
        </div>
      <% end %>
    </div>
    <div class="status-card confirmed <%= 'active' if params[:status] == 'confirmed' %>">
      <%= link_to admin_consultations_path(status: 'confirmed') do %>
        <div class="card-content">
          <div class="card-number"><%= @status_counts[:confirmed] %></div>
          <div class="card-label">確定済み</div>
        </div>
      <% end %>
    </div>
    <div class="status-card completed <%= 'active' if params[:status] == 'completed' %>">
      <%= link_to admin_consultations_path(status: 'completed') do %>
        <div class="card-content">
          <div class="card-number"><%= @status_counts[:completed] %></div>
          <div class="card-label">完了</div>
        </div>
      <% end %>
    </div>
    <div class="status-card cancelled <%= 'active' if params[:status] == 'cancelled' %>">
      <%= link_to admin_consultations_path(status: 'cancelled') do %>
        <div class="card-content">
          <div class="card-number"><%= @status_counts[:cancelled] %></div>
          <div class="card-label">キャンセル</div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- フィルター -->
  <div class="filters-section">
    <%= form_tag admin_consultations_path, method: :get, class: "filters-form" do %>
      <div class="filter-group">
        <%= label_tag :date_from, "開始日", class: "filter-label" %>
        <%= date_field_tag :date_from, params[:date_from], class: "filter-input" %>
      </div>
      <div class="filter-group">
        <%= label_tag :date_to, "終了日", class: "filter-label" %>
        <%= date_field_tag :date_to, params[:date_to], class: "filter-input" %>
      </div>
      <div class="filter-group">
        <%= hidden_field_tag :status, params[:status] %>
        <%= submit_tag "絞り込み", class: "filter-btn" %>
        <%= link_to "リセット", admin_consultations_path, class: "reset-btn" %>
      </div>
    <% end %>
  </div>

  <!-- 相談一覧 -->
  <div class="consultations-table">
    <% if @consultations.any? %>
      <table class="data-table">
        <thead>
          <tr>
            <th>ID</th>
            <th>お名前</th>
            <th>メール</th>
            <th>相談タイプ</th>
            <th>希望日時</th>
            <th>ステータス</th>
            <th>予約日</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @consultations.each do |consultation| %>
            <tr class="consultation-row">
              <td class="id-cell">#<%= consultation.id %></td>
              <td class="name-cell">
                <div class="name-info">
                  <div class="name"><%= consultation.name %></div>
                  <div class="phone"><%= consultation.phone %></div>
                </div>
              </td>
              <td class="email-cell"><%= consultation.email %></td>
              <td class="type-cell">
                <span class="type-badge">
                  <%= consultation.consultation_type_display %>
                </span>
              </td>
              <td class="datetime-cell">
                <div class="datetime-info">
                  <div class="date"><%= consultation.preferred_date.strftime('%m/%d') %></div>
                  <div class="time"><%= consultation.preferred_time %></div>
                  <div class="timezone"><%= consultation.timezone %></div>
                </div>
              </td>
              <td class="status-cell">
                <span class="status-badge status-<%= consultation.status %>">
                  <%= consultation.status_display %>
                </span>
              </td>
              <td class="created-cell">
                <%= consultation.created_at.strftime('%m/%d %H:%M') %>
              </td>
              <td class="actions-cell">
                <div class="action-buttons">
                  <%= link_to admin_consultation_path(consultation), class: "btn btn-view" do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
                  
                  <% if consultation.status == 'pending' %>
                    <%= link_to confirm_admin_consultation_path(consultation), method: :patch, 
                        class: "btn btn-confirm", 
                        data: { confirm: "この相談を確定しますか？" } do %>
                      <i class="fas fa-check"></i>
                    <% end %>
                  <% end %>
                  
                  <% if consultation.status == 'confirmed' %>
                    <%= link_to complete_admin_consultation_path(consultation), method: :patch, 
                        class: "btn btn-complete", 
                        data: { confirm: "この相談を完了にしますか？" } do %>
                      <i class="fas fa-check-circle"></i>
                    <% end %>
                  <% end %>
                  
                  <% unless consultation.status == 'cancelled' %>
                    <%= link_to cancel_admin_consultation_path(consultation), method: :patch, 
                        class: "btn btn-cancel", 
                        data: { confirm: "この相談をキャンセルしますか？" } do %>
                      <i class="fas fa-times"></i>
                    <% end %>
                  <% end %>
                  
                  <%= link_to admin_consultation_path(consultation), method: :delete, 
                      class: "btn btn-delete", 
                      data: { confirm: "この相談を削除しますか？削除すると元に戻せません。" } do %>
                    <i class="fas fa-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <!-- ページネーション -->
      <div class="pagination-wrapper">
        <%= paginate @consultations if respond_to?(:paginate) %>
      </div>
    <% else %>
      <div class="empty-state">
        <i class="fas fa-calendar-times"></i>
        <h3>相談予約がありません</h3>
        <p>まだ無料相談の予約がありません。</p>
      </div>
    <% end %>
  </div>
</div>

