<div style="max-width: 400px; margin: 4rem auto; padding: 2rem; background: white; border-radius: 8px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
  <h2 style="text-align: center; margin-bottom: 2rem; color: #333;">管理者ログイン</h2>
  
  <%= form_with url: admin_login_path, local: true do |form| %>
    <div class="form-group">
      <%= form.label :username, "ユーザー名" %>
      <%= form.text_field :username, class: "form-control", required: true, autofocus: true %>
    </div>
    
    <div class="form-group">
      <%= form.label :password, "パスワード" %>
      <%= form.password_field :password, class: "form-control", required: true %>
    </div>
    
    <div class="form-group">
      <%= form.submit "ログイン", class: "btn btn-primary", style: "width: 100%;" %>
    </div>
  <% end %>
  
  <div style="text-align: center; margin-top: 2rem; color: #6c757d;">
    <small>管理者アカウントでログインしてください</small>
  </div>
</div>