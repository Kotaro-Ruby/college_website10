  // Set up event listeners after a short delay to ensure DOM is ready
  setTimeout(function() {
    const hamburger = document.getElementById('hamburgerMenu');
    if (hamburger) {
      hamburger.onclick = function(e) {
        e.preventDefault();
        e.stopPropagation();
        toggleSidebar();
      };
      console.log('Hamburger onclick set');
    } else {
      console.log('Hamburger not found');
    }
    
    // Close on outside click
    document.onclick = function(e) {
      const hamburger = document.getElementById('hamburgerMenu');
      const sidebar = document.getElementById('sidebarMenu');
      
      if (hamburger && sidebar && sidebar.classList.contains('active')) {
        if (!e.target.closest('#hamburgerMenu') && !e.target.closest('#sidebarMenu')) {
          closeSidebar();
        }
      }
    };
    
    // Close on sidebar link click
    const sidebarItems = document.querySelectorAll('.sidebar-item');
    sidebarItems.forEach(item => {
      item.onclick = function() {
        setTimeout(closeSidebar, 100);
      };
    });
    
  }, 100);

  document.addEventListener('DOMContentLoaded', function() {
    console.log('DOM Content Loaded');
    const dropdownTriggers = document.querySelectorAll('.dropdown-trigger');


    // Dropdown functionality
    dropdownTriggers.forEach(trigger => {
      const dropdown = trigger.closest('.nav-dropdown');
      
      // Click to toggle dropdown
      trigger.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        
        // Close other dropdowns
        document.querySelectorAll('.nav-dropdown').forEach(otherDropdown => {
          if (otherDropdown !== dropdown) {
            otherDropdown.classList.remove('active', 'show');
          }
        });
        
        // Toggle current dropdown
        const isActive = dropdown.classList.contains('active') || dropdown.classList.contains('show');
        
        if (isActive) {
          dropdown.classList.remove('active', 'show');
        } else {
          dropdown.classList.add('active', 'show');
          // å¼·åˆ¶çš„ã«ã‚¹ã‚¿ã‚¤ãƒ«ã‚’é©ç”¨
          const menu = dropdown.querySelector('.dropdown-menu');
          if (menu) {
            menu.style.opacity = '1';
            menu.style.visibility = 'visible';
            menu.style.transform = 'translateY(0)';
            menu.style.pointerEvents = 'auto';
          }
        }
      });
      
      // Mouse enter/leave for desktop with longer delay
      let hoverTimeout;
      
      dropdown.addEventListener('mouseenter', function() {
        if (window.innerWidth > 768) {
          clearTimeout(hoverTimeout);
          dropdown.classList.add('active');
          console.log('Dropdown mouseenter - opening');
        }
      });
      
      dropdown.addEventListener('mouseleave', function() {
        if (window.innerWidth > 768) {
          // ã‚ˆã‚Šé•·ã„é…å»¶ã§ã‚«ãƒ¼ã‚½ãƒ«ç§»å‹•æ™‚ã®èª¤é–‰ã˜ã‚’é˜²ã
          hoverTimeout = setTimeout(() => {
            // ã‚¯ãƒªãƒƒã‚¯ã§é–‹ã„ãŸå ´åˆã¯é–‰ã˜ãªã„
            if (!dropdown.classList.contains('show')) {
              dropdown.classList.remove('active');
              console.log('Dropdown mouseleave timeout - closing');
            }
          }, 300); // 150ms â†’ 300ms ã«å»¶é•·
        }
      });

      // ãƒ‰ãƒ­ãƒƒãƒ—ãƒ€ã‚¦ãƒ³ãƒ¡ãƒ‹ãƒ¥ãƒ¼è‡ªä½“ã§ã®ãƒã‚¦ã‚¹ã‚¤ãƒ™ãƒ³ãƒˆ
      const dropdownMenu = dropdown.querySelector('.dropdown-menu');
      if (dropdownMenu) {
        dropdownMenu.addEventListener('mouseenter', function() {
          if (window.innerWidth > 768) {
            clearTimeout(hoverTimeout);
            dropdown.classList.add('active');
            console.log('Dropdown menu mouseenter - keeping open');
          }
        });

        dropdownMenu.addEventListener('mouseleave', function() {
          if (window.innerWidth > 768) {
            hoverTimeout = setTimeout(() => {
              if (!dropdown.classList.contains('show')) {
                dropdown.classList.remove('active');
                console.log('Dropdown menu mouseleave timeout - closing');
              }
            }, 300); // 150ms â†’ 300ms ã«å»¶é•·
