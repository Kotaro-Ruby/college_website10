<script>
  document.addEventListener('DOMContentLoaded', function() {
    console.log('DOM Content Loaded - Starting mobile menu setup');
    
    const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
    const headerNav = document.querySelector('.header-nav');
    const dropdownTriggers = document.querySelectorAll('.dropdown-trigger');
    
    console.log('Mobile menu toggle element:', mobileMenuToggle);
    console.log('Header nav element:', headerNav);
    console.log('Window width:', window.innerWidth);
    
    if (mobileMenuToggle) {
      console.log('Mobile menu toggle styles:', window.getComputedStyle(mobileMenuToggle).display);
      console.log('Mobile menu toggle position:', mobileMenuToggle.getBoundingClientRect());
    }
    
    if (headerNav) {
      console.log('Header nav styles:', window.getComputedStyle(headerNav).position);
      console.log('Header nav left:', window.getComputedStyle(headerNav).left);
    }

    // Mobile menu functionality
    if (mobileMenuToggle && headerNav) {
      console.log('Setting up mobile menu event listeners');
      
      // Function to toggle menu
      function toggleMobileMenu(eventType) {
        console.log('Toggling mobile menu via', eventType);
        const wasActive = headerNav.classList.contains('active');
        
        mobileMenuToggle.classList.toggle('active');
        headerNav.classList.toggle('active');
        
        console.log('Menu state changed from', wasActive, 'to', headerNav.classList.contains('active'));
        console.log('Header nav classes:', headerNav.className);
        console.log('Mobile toggle classes:', mobileMenuToggle.className);
        
        // Force style update with timeout
        setTimeout(() => {
          if (headerNav.classList.contains('active')) {
            headerNav.style.left = '0';
            headerNav.style.display = 'flex';
            headerNav.style.visibility = 'visible';
            headerNav.style.transform = 'translateX(0)';
            console.log('Forcing menu to show');
          } else {
            headerNav.style.left = '-100%';
            headerNav.style.transform = 'translateX(-100%)';
            console.log('Forcing menu to hide');
          }
        }, 10);
      }
      
      // Unified event handler
      function handleMenuToggle(e) {
        e.preventDefault();
        e.stopPropagation();
        console.log('Menu toggle triggered by:', e.type);
        toggleMobileMenu(e.type);
      }
      
      // Multiple event listeners for better compatibility
      mobileMenuToggle.addEventListener('click', handleMenuToggle);
      mobileMenuToggle.addEventListener('touchstart', handleMenuToggle);
      mobileMenuToggle.addEventListener('touchend', function(e) {
        e.preventDefault();
      });

      // Close menu when clicking outside
      document.addEventListener('click', function(event) {
        if (!mobileMenuToggle.contains(event.target) && !headerNav.contains(event.target)) {
          mobileMenuToggle.classList.remove('active');
          headerNav.classList.remove('active');
        }
      });

      // Close menu when clicking on a link
      const navLinks = document.querySelectorAll('.nav-link:not(.dropdown-trigger)');
      navLinks.forEach(link => {
        link.addEventListener('click', function() {
          mobileMenuToggle.classList.remove('active');
          headerNav.classList.remove('active');
        });
      });
    }

    // Dropdown functionality
    dropdownTriggers.forEach(trigger => {
      const dropdown = trigger.closest('.nav-dropdown');
      
      // Click to toggle dropdown
      trigger.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        
        // Close other dropdowns
        document.querySelectorAll('.nav-dropdown').forEach(otherDropdown => {
          if (otherDropdown !== dropdown) {
            otherDropdown.classList.remove('active', 'show');
          }
        });
        
        // Toggle current dropdown
        const isActive = dropdown.classList.contains('active') || dropdown.classList.contains('show');
        
        if (isActive) {
          dropdown.classList.remove('active', 'show');
        } else {
          dropdown.classList.add('active', 'show');
          // å¼·åˆ¶çš„ã«ã‚¹ã‚¿ã‚¤ãƒ«ã‚’é©ç”¨
          const menu = dropdown.querySelector('.dropdown-menu');
          if (menu) {
            menu.style.opacity = '1';
            menu.style.visibility = 'visible';
            menu.style.transform = 'translateY(0)';
            menu.style.pointerEvents = 'auto';
          }
        }
      });
      
      // Mouse enter/leave for desktop with longer delay
      let hoverTimeout;
      
      dropdown.addEventListener('mouseenter', function() {
        if (window.innerWidth > 768) {
          clearTimeout(hoverTimeout);
          dropdown.classList.add('active');
          console.log('Dropdown mouseenter - opening');
        }
      });
      
      dropdown.addEventListener('mouseleave', function() {
        if (window.innerWidth > 768) {
          // ã‚ˆã‚Šé•·ã„é…å»¶ã§ã‚«ãƒ¼ã‚½ãƒ«ç§»å‹•æ™‚ã®èª¤é–‰ã˜ã‚’é˜²ã
          hoverTimeout = setTimeout(() => {
            // ã‚¯ãƒªãƒƒã‚¯ã§é–‹ã„ãŸå ´åˆã¯é–‰ã˜ãªã„
            if (!dropdown.classList.contains('show')) {
              dropdown.classList.remove('active');
              console.log('Dropdown mouseleave timeout - closing');
            }
          }, 300); // 150ms â†’ 300ms ã«å»¶é•·
        }
      });

      // ãƒ‰ãƒ­ãƒƒãƒ—ãƒ€ã‚¦ãƒ³ãƒ¡ãƒ‹ãƒ¥ãƒ¼è‡ªä½“ã§ã®ãƒã‚¦ã‚¹ã‚¤ãƒ™ãƒ³ãƒˆ
      const dropdownMenu = dropdown.querySelector('.dropdown-menu');
      if (dropdownMenu) {
        dropdownMenu.addEventListener('mouseenter', function() {
          if (window.innerWidth > 768) {
            clearTimeout(hoverTimeout);
            dropdown.classList.add('active');
            console.log('Dropdown menu mouseenter - keeping open');
          }
        });

        dropdownMenu.addEventListener('mouseleave', function() {
          if (window.innerWidth > 768) {
            hoverTimeout = setTimeout(() => {
              if (!dropdown.classList.contains('show')) {
                dropdown.classList.remove('active');
                console.log('Dropdown menu mouseleave timeout - closing');
              }
            }, 300); // 150ms â†’ 300ms ã«å»¶é•·
          }
        });

        // ãƒ‰ãƒ­ãƒƒãƒ—ãƒ€ã‚¦ãƒ³ã‚¢ã‚¤ãƒ†ãƒ ã§ã®ãƒã‚¦ã‚¹ã‚¤ãƒ™ãƒ³ãƒˆ
        const dropdownItems = dropdownMenu.querySelectorAll('.dropdown-item');
        dropdownItems.forEach(item => {
          item.addEventListener('mouseenter', function() {
            if (window.innerWidth > 768) {
              clearTimeout(hoverTimeout);
              dropdown.classList.add('active');
              console.log('Dropdown item mouseenter - keeping open');
            }
          });
        });
      }
    });

    // Close dropdowns when clicking outside
    document.addEventListener('click', function(event) {
      const isDropdownClick = event.target.closest('.nav-dropdown');
      const isDropdownItem = event.target.closest('.dropdown-item');
      
      if (!isDropdownClick) {
        document.querySelectorAll('.nav-dropdown').forEach(dropdown => {
          dropdown.classList.remove('active', 'show');
          const menu = dropdown.querySelector('.dropdown-menu');
          if (menu) {
            menu.style.opacity = '';
            menu.style.visibility = '';
            menu.style.transform = '';
            menu.style.pointerEvents = '';
          }
        });
      }
      
      // ãƒ‰ãƒ­ãƒƒãƒ—ãƒ€ã‚¦ãƒ³ã‚¢ã‚¤ãƒ†ãƒ ãŒã‚¯ãƒªãƒƒã‚¯ã•ã‚ŒãŸå ´åˆ
      if (isDropdownItem && !isDropdownItem.classList.contains('disabled')) {
        if (isDropdownItem.tagName === 'A' || isDropdownItem.onclick) {
          setTimeout(() => {
            document.querySelectorAll('.nav-dropdown').forEach(dropdown => {
              dropdown.classList.remove('active', 'show');
              const menu = dropdown.querySelector('.dropdown-menu');
              if (menu) {
                menu.style.opacity = '';
                menu.style.visibility = '';
                menu.style.transform = '';
                menu.style.pointerEvents = '';
              }
            });
          }, 100);
        }
      }
    });
  });

