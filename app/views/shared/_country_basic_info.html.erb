<!-- 国の基本情報セクション -->
<% if country %>
<style>
  .country-basic-info-section {
    margin: 0;
    background: #f5f5f5;
    padding: 60px 20px;
  }

  .country-basic-info-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .country-basic-info-card {
    background: white;
    border-radius: 8px;
    border: 1px solid #e5e5e5;
    overflow: hidden;
  }

  .country-basic-info-header {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    padding: 30px 20px;
    text-align: center;
    color: white;
  }

  .country-basic-info-header h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 8px 0;
  }

  .country-basic-info-header p {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
    margin: 0;
  }

  .country-basic-info-body {
    padding: 30px;
  }

  .country-info-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    margin-bottom: 30px;
  }

  .country-info-item {
    background: #f9fafb;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    padding: 20px;
    text-align: center;
  }

  .country-info-icon {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, #f0b13d 0%, #e09c2a 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 12px;
    color: white;
    font-size: 1rem;
  }

  .country-info-label {
    font-size: 0.75rem;
    color: #78716c;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    margin-bottom: 6px;
  }

  .country-info-value {
    font-size: 1rem;
    font-weight: 600;
    color: #1c1917;
    line-height: 1.4;
  }

  .country-info-value small {
    font-size: 0.8rem;
    color: #666;
    font-weight: 400;
  }

  .country-symbols {
    display: flex;
    justify-content: center;
    gap: 40px;
    padding: 20px 0;
    border-top: 1px solid #e5e5e5;
    margin-top: 10px;
  }

  .country-symbol {
    text-align: center;
  }

  .country-symbol-title {
    font-size: 0.75rem;
    color: #78716c;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    margin-bottom: 12px;
  }

  .country-flag-img {
    max-width: 120px;
    height: 70px;
    object-fit: contain;
    border-radius: 4px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  .country-coat-img {
    max-width: 80px;
    height: 70px;
    object-fit: contain;
  }

  .country-map-links {
    display: flex;
    justify-content: center;
    gap: 15px;
    padding-top: 20px;
    border-top: 1px solid #e5e5e5;
    margin-top: 20px;
  }

  .country-map-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    background: #1a1a1a;
    color: white;
    text-decoration: none;
    border-radius: 6px;
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .country-map-link:hover {
    background: #333;
  }

  .country-data-credit {
    text-align: center;
    padding-top: 20px;
    border-top: 1px solid #e5e5e5;
    margin-top: 20px;
  }

  .country-data-credit p {
    font-size: 0.8rem;
    color: #999;
    margin: 0;
  }

  .country-data-credit a {
    color: rgb(200, 140, 40);
    text-decoration: none;
  }

  .country-data-credit a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .country-basic-info-section {
      padding: 40px 15px;
    }

    .country-basic-info-body {
      padding: 20px;
    }

    .country-info-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 12px;
    }

    .country-info-item {
      padding: 15px 12px;
    }

    .country-info-icon {
      width: 32px;
      height: 32px;
      font-size: 0.875rem;
    }

    .country-info-label {
      font-size: 0.7rem;
    }

    .country-info-value {
      font-size: 0.9rem;
    }

    .country-symbols {
      gap: 25px;
    }

    .country-flag-img {
      max-width: 100px;
      height: 60px;
    }

    .country-coat-img {
      max-width: 60px;
      height: 60px;
    }

    .country-map-links {
      flex-direction: column;
      align-items: center;
    }

    .country-map-link {
      width: 100%;
      max-width: 250px;
      justify-content: center;
    }
  }
</style>

<section class="country-basic-info-section">
  <div class="country-basic-info-container">
    <div class="country-basic-info-card">
      <div class="country-basic-info-header">
        <h2><%= country.name %>基本情報</h2>
        <p>Country Information</p>
      </div>
      <div class="country-basic-info-body">
        <div class="country-info-grid">
          <div class="country-info-item">
            <div class="country-info-icon"><i class="fas fa-city"></i></div>
            <div class="country-info-label">首都</div>
            <div class="country-info-value"><%= country.capital %></div>
          </div>

          <div class="country-info-item">
            <div class="country-info-icon"><i class="fas fa-coins"></i></div>
            <div class="country-info-label">通貨</div>
            <div class="country-info-value">
              <%= country.currency_name %><br>
              <small>(<%= country.currency_code %> <%= country.currency_symbol %>)</small>
            </div>
          </div>

          <div class="country-info-item">
            <div class="country-info-icon"><i class="fas fa-language"></i></div>
            <div class="country-info-label">公用語</div>
            <div class="country-info-value">
              <% if country.languages.present? %>
                <%= country.languages.values.first %>
              <% else %>
                英語
              <% end %>
            </div>
          </div>

          <div class="country-info-item">
            <div class="country-info-icon"><i class="fas fa-clock"></i></div>
            <div class="country-info-label">タイムゾーン</div>
            <div class="country-info-value"><%= country.timezone_range %></div>
          </div>

          <div class="country-info-item">
            <div class="country-info-icon"><i class="fas fa-car"></i></div>
            <div class="country-info-label">車両通行</div>
            <div class="country-info-value"><%= country.car_side == "left" ? "左側通行" : "右側通行" %></div>
          </div>

          <div class="country-info-item">
            <div class="country-info-icon"><i class="fas fa-map-marked-alt"></i></div>
            <div class="country-info-label">面積</div>
            <div class="country-info-value"><%= number_to_human(country.area, units: {thousand: "千", million: "百万"}, precision: 1, locale: :en) %> km²</div>
          </div>
        </div>

        <% if country.flag_svg.present? || country.coat_of_arms_svg.present? %>
        <div class="country-symbols">
          <% if country.flag_svg.present? %>
          <div class="country-symbol">
            <div class="country-symbol-title">国旗</div>
            <img src="<%= country.flag_svg %>" alt="<%= country.name %>国旗" class="country-flag-img">
          </div>
          <% end %>

          <% if country.coat_of_arms_svg.present? %>
          <div class="country-symbol">
            <div class="country-symbol-title">国章</div>
            <img src="<%= country.coat_of_arms_svg %>" alt="<%= country.name %>国章" class="country-coat-img">
          </div>
          <% end %>
        </div>
        <% end %>

        <% if country.maps_google.present? || country.maps_openstreetmap.present? %>
        <div class="country-map-links">
          <% if country.maps_google.present? %>
            <a href="<%= country.maps_google %>" target="_blank" class="country-map-link">
              <i class="fab fa-google"></i> Google Mapsで見る
            </a>
          <% end %>
          <% if country.maps_openstreetmap.present? %>
            <a href="<%= country.maps_openstreetmap %>" target="_blank" class="country-map-link">
              <i class="fas fa-map-marked-alt"></i> OpenStreetMapで見る
            </a>
          <% end %>
        </div>
        <% end %>

        <div class="country-data-credit">
          <p>
            データ提供: <a href="https://restcountries.com" target="_blank" rel="noopener noreferrer">REST Countries API</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
<% end %>
