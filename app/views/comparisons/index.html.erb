<div class="main">
  <div class="professional-info-container">
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="hero-content">
        <h1 class="hero-title">大学比較</h1>
        <p class="hero-subtitle">Compare Universities</p>
        <div class="hero-divider"></div>
      </div>
    </section>

    <% if @colleges.any? %>
      <!-- Actions -->
      <section class="section-wrapper">
        <div class="section-content">
          <div class="compare-actions">
            <span class="compare-count"><%= @colleges.count %>校を比較中</span>
            <div class="action-buttons">
              <a href="/search" class="action-btn add-btn">
                <i class="fas fa-plus"></i>
                大学を追加
              </a>
              <button id="clearAllBtn" class="action-btn clear-btn">
                <i class="fas fa-trash-alt"></i>
                すべてクリア
              </button>
            </div>
          </div>
        </div>
      </section>

      <!-- Comparison Grid -->
      <section class="section-wrapper comparison-section-bg">
        <div class="section-content-wide">
          <div class="comparison-grid colleges-<%= @colleges.count %>">
            <% @colleges.each do |college| %>
              <div class="college-card">
                <!-- Header -->
                <div class="college-header">
                  <h3 class="college-name">
                    <a href="<%= conditions_path(college) %>">
                      <%= college.name_ja.presence || college.college %>
                    </a>
                  </h3>
                  <% if college.name_ja.present? %>
                    <p class="college-english"><%= college.college %></p>
                  <% end %>
                  <button class="remove-btn" data-condition-id="<%= college.id %>" title="削除">
                    <i class="fas fa-times"></i>
                  </button>
                </div>

                <!-- Location -->
                <div class="info-section">
                  <div class="info-row">
                    <span class="info-label"><i class="fas fa-map-marker-alt"></i> 所在地</span>
                    <span class="info-value"><%= college.city %>, <%= college.state.gsub(/\s*\(.*?\)/, '') if college.state %></span>
                  </div>
                  <div class="info-row">
                    <span class="info-label"><i class="fas fa-building"></i> 設立形態</span>
                    <span class="info-value"><%= college.privateorpublic || "N/A" %></span>
                  </div>
                </div>

                <!-- Stats -->
                <div class="info-section">
                  <h4 class="section-title">統計情報</h4>
                  <div class="stats-grid">
                    <div class="stat-item">
                      <span class="stat-value"><%= college.students ? number_with_delimiter(college.students) : "N/A" %></span>
                      <span class="stat-label">学生数</span>
                    </div>
                    <div class="stat-item">
                      <span class="stat-value"><%= college.acceptance_rate ? "#{(college.acceptance_rate * 100).round}%" : "N/A" %></span>
                      <span class="stat-label">合格率</span>
                    </div>
                    <div class="stat-item">
                      <span class="stat-value"><%= college.graduation_rate ? "#{(college.graduation_rate * 100).round}%" : "N/A" %></span>
                      <span class="stat-label">卒業率</span>
                    </div>
                    <div class="stat-item">
                      <span class="stat-value"><%= college.tuition ? "$#{number_with_delimiter(college.tuition)}" : "N/A" %></span>
                      <span class="stat-label">年間授業料</span>
                    </div>
                  </div>
                </div>

                <!-- Additional Info -->
                <div class="info-section">
                  <div class="info-row">
                    <span class="info-label">平均GPA</span>
                    <span class="info-value"><%= college.GPA || "N/A" %></span>
                  </div>
                  <div class="info-row">
                    <span class="info-label">NCAA Division</span>
                    <span class="info-value"><%= college.Division || "N/A" %></span>
                  </div>
                </div>

                <% if college.comment.present? %>
                  <div class="info-section comment-section">
                    <h4 class="section-title">特徴</h4>
                    <p class="college-comment"><%= truncate(college.comment, length: 200) %></p>
                  </div>
                <% end %>

                <!-- Footer -->
                <div class="card-footer">
                  <a href="<%= conditions_path(college) %>" class="detail-link">
                    詳細を見る <i class="fas fa-arrow-right"></i>
                  </a>
                  <% if college.website.present? %>
                    <% url = college.website.gsub(/\/$/, '') %>
                    <% href_url = url.match?(/^https?:\/\//) ? url : "https://#{url}" %>
                    <a href="<%= href_url %>" target="_blank" class="website-link">
                      <i class="fas fa-external-link-alt"></i> 公式サイト
                    </a>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </section>

    <% else %>
      <!-- Empty State -->
      <section class="section-wrapper">
        <div class="section-content">
          <div class="empty-state">
            <div class="empty-icon">
              <i class="fas fa-balance-scale"></i>
            </div>
            <h2>比較する大学がありません</h2>
            <p>大学の詳細ページから「比較リストに追加」ボタンを押して、<br>大学を比較リストに追加してください。</p>
            <a href="/search" class="search-btn">
              <i class="fas fa-search"></i>
              大学を探す
            </a>
          </div>
        </div>
      </section>
    <% end %>
  </div>
</div>

<style>
  /* Container */
  .professional-info-container {
    max-width: 100%;
    margin: 0;
    padding: 0;
    background: #ffffff;
  }

  /* Hero Section */
  .hero-section {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    padding: 60px 20px;
    text-align: center;
    color: white;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-title {
    font-size: 42px;
    font-weight: 700;
    margin-bottom: 10px;
    letter-spacing: -0.5px;
  }

  .hero-subtitle {
    font-size: 16px;
    font-weight: 300;
    opacity: 0.8;
    letter-spacing: 2px;
    text-transform: uppercase;
  }

  .hero-divider {
    width: 60px;
    height: 3px;
    background: rgb(200, 140, 40);
    margin: 25px auto 0;
  }

  /* Section Wrapper */
  .section-wrapper {
    padding: 30px 20px;
  }

  .section-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .section-content-wide {
    max-width: 1400px;
    margin: 0 auto;
  }

  .comparison-section-bg {
    background: #f5f5f5;
    padding: 40px 20px;
  }

  /* Actions */
  .compare-actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 16px;
  }

  .compare-count {
    font-size: 16px;
    font-weight: 600;
    color: #1a1a1a;
  }

  .action-buttons {
    display: flex;
    gap: 12px;
  }

  .action-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s;
    cursor: pointer;
    border: none;
  }

  .add-btn {
    background: #1a1a1a;
    color: white;
  }

  .add-btn:hover {
    background: #333;
    color: white;
  }

  .clear-btn {
    background: white;
    color: #666;
    border: 1px solid #ddd;
  }

  .clear-btn:hover {
    background: #fee;
    color: #c00;
    border-color: #fcc;
  }

  /* Comparison Grid */
  .comparison-grid {
    display: grid;
    gap: 24px;
  }

  .colleges-1 { grid-template-columns: 1fr; max-width: 500px; margin: 0 auto; }
  .colleges-2 { grid-template-columns: repeat(2, 1fr); }
  .colleges-3 { grid-template-columns: repeat(3, 1fr); }
  .colleges-4 { grid-template-columns: repeat(4, 1fr); }

  /* College Card */
  .college-card {
    background: white;
    border-radius: 8px;
    border: 1px solid #e5e5e5;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .college-header {
    padding: 24px 20px 20px;
    border-bottom: 1px solid #f0f0f0;
    position: relative;
  }

  .college-name {
    font-size: 18px;
    font-weight: 600;
    margin: 0 0 4px 0;
    padding-right: 40px;
    line-height: 1.4;
  }

  .college-name a {
    color: #1a1a1a;
    text-decoration: none;
    transition: color 0.2s;
  }

  .college-name a:hover {
    color: rgb(200, 140, 40);
  }

  .college-english {
    font-size: 12px;
    color: #888;
    margin: 0;
    padding-right: 40px;
  }

  .remove-btn {
    position: absolute;
    top: 20px;
    right: 16px;
    width: 28px;
    height: 28px;
    border: none;
    background: #f5f5f5;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: #999;
    transition: all 0.2s;
  }

  .remove-btn:hover {
    background: #fee;
    color: #c00;
  }

  /* Info Section */
  .info-section {
    padding: 16px 20px;
    border-bottom: 1px solid #f0f0f0;
  }

  .info-section:last-of-type {
    border-bottom: none;
  }

  .section-title {
    font-size: 13px;
    font-weight: 600;
    color: #888;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin: 0 0 12px 0;
  }

  .info-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 8px 0;
  }

  .info-label {
    font-size: 13px;
    color: #666;
  }

  .info-label i {
    margin-right: 6px;
    color: rgb(200, 140, 40);
    width: 14px;
  }

  .info-value {
    font-size: 14px;
    font-weight: 500;
    color: #1a1a1a;
  }

  /* Stats Grid */
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
  }

  .stat-item {
    text-align: center;
    padding: 12px;
    background: #f9f9f9;
    border-radius: 6px;
  }

  .stat-value {
    display: block;
    font-size: 18px;
    font-weight: 700;
    color: rgb(200, 140, 40);
    margin-bottom: 4px;
  }

  .stat-label {
    font-size: 11px;
    color: #888;
    text-transform: uppercase;
    letter-spacing: 0.3px;
  }

  /* Comment */
  .comment-section {
    flex: 1;
  }

  .college-comment {
    font-size: 13px;
    line-height: 1.7;
    color: #555;
    margin: 0;
  }

  /* Card Footer */
  .card-footer {
    padding: 16px 20px;
    background: #fafafa;
    border-top: 1px solid #f0f0f0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
  }

  .detail-link {
    font-size: 13px;
    font-weight: 500;
    color: #1a1a1a;
    text-decoration: none;
    transition: color 0.2s;
  }

  .detail-link:hover {
    color: rgb(200, 140, 40);
  }

  .detail-link i {
    margin-left: 4px;
    font-size: 11px;
  }

  .website-link {
    font-size: 12px;
    color: #888;
    text-decoration: none;
    transition: color 0.2s;
  }

  .website-link:hover {
    color: rgb(200, 140, 40);
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: 80px 40px;
    background: #f9f9f9;
    border-radius: 8px;
    border: 1px solid #e5e5e5;
  }

  .empty-icon {
    font-size: 48px;
    color: #ddd;
    margin-bottom: 24px;
  }

  .empty-state h2 {
    font-size: 24px;
    font-weight: 600;
    color: #1a1a1a;
    margin: 0 0 12px 0;
  }

  .empty-state p {
    font-size: 15px;
    color: #666;
    line-height: 1.7;
    margin: 0 0 32px 0;
  }

  .search-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 14px 28px;
    background: #1a1a1a;
    color: white;
    text-decoration: none;
    border-radius: 6px;
    font-size: 15px;
    font-weight: 500;
    transition: all 0.2s;
  }

  .search-btn:hover {
    background: #333;
    color: white;
  }

  /* Responsive */
  @media (max-width: 1200px) {
    .colleges-3,
    .colleges-4 {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 32px;
    }

    .hero-section {
      padding: 50px 20px;
    }

    .comparison-grid {
      grid-template-columns: 1fr !important;
      max-width: 500px;
      margin: 0 auto;
    }

    .compare-actions {
      flex-direction: column;
      align-items: stretch;
      text-align: center;
    }

    .action-buttons {
      justify-content: center;
    }

    .empty-state {
      padding: 60px 20px;
    }

    .empty-state p br {
      display: none;
    }
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Remove college
  document.querySelectorAll('.remove-btn').forEach(btn => {
    btn.addEventListener('click', function() {
      const conditionId = this.getAttribute('data-condition-id');
      const card = this.closest('.college-card');

      if (confirm('この大学を比較リストから削除しますか？')) {
        fetch('/compare', {
          method: 'DELETE',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
          },
          body: JSON.stringify({ condition_id: conditionId })
        })
        .then(response => response.json())
        .then(data => {
          if (data.status === 'success') {
            card.style.opacity = '0';
            card.style.transform = 'scale(0.95)';
            card.style.transition = 'all 0.2s';
            setTimeout(() => location.reload(), 200);
          }
        })
        .catch(error => console.error('Error:', error));
      }
    });
  });

  // Clear all
  const clearAllBtn = document.getElementById('clearAllBtn');
  if (clearAllBtn) {
    clearAllBtn.addEventListener('click', function() {
      if (confirm('比較リストをすべてクリアしますか？')) {
        fetch('/compare/clear', {
          method: 'DELETE',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
          }
        })
        .then(response => response.json())
        .then(data => {
          if (data.status === 'success') {
            location.reload();
          }
        })
        .catch(error => console.error('Error:', error));
      }
    });
  }
});

// Turbo対応
document.addEventListener('turbo:load', function() {
  // 同じイベントハンドラを再設定
  document.querySelectorAll('.remove-btn').forEach(btn => {
    btn.addEventListener('click', function() {
      const conditionId = this.getAttribute('data-condition-id');
      const card = this.closest('.college-card');

      if (confirm('この大学を比較リストから削除しますか？')) {
        fetch('/compare', {
          method: 'DELETE',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
          },
          body: JSON.stringify({ condition_id: conditionId })
        })
        .then(response => response.json())
        .then(data => {
          if (data.status === 'success') {
            card.style.opacity = '0';
            card.style.transform = 'scale(0.95)';
            card.style.transition = 'all 0.2s';
            setTimeout(() => location.reload(), 200);
          }
        })
        .catch(error => console.error('Error:', error));
      }
    });
  });
});
</script>
