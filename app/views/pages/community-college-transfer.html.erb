  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Hiragino Sans", sans-serif;
  background: #fff;
}

/* Header */
.article-header {
  position: relative;
  padding: 80px 20px;
  background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  color: white;
  text-align: center;
}

.header-content {
  max-width: 800px;
  margin: 0 auto;
}

.article-meta {
  margin-bottom: 20px;
}

.category {
  display: inline-block;
  padding: 6px 16px;
  background: rgb(240, 177, 61);
  color: #1a1a1a;
  border-radius: 20px;
  font-size: 13px;
  font-weight: 600;
  margin-right: 12px;
}

.publish-date {
  color: rgba(255,255,255,0.7);
  font-size: 14px;
}

.article-title {
  font-size: 36px;
  font-weight: 700;
  margin: 0 0 12px 0;
  line-height: 1.3;
}

.article-subtitle {
  font-size: 18px;
  opacity: 0.8;
  margin: 0 0 30px 0;
}

.author-info {
  display: inline-flex;
  align-items: center;
  gap: 12px;
}

.author-avatar {
  width: 48px;
  height: 48px;
  background: rgb(240, 177, 61);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  color: #1a1a1a;
}

.author-details {
  text-align: left;
}

.author-name {
  display: block;
  font-weight: 600;
}

.author-title {
  display: block;
  font-size: 13px;
  opacity: 0.7;
}

/* Body */
.article-body {
  max-width: 800px;
  margin: 0 auto;
  padding: 60px 20px;
}

.blog-content h2 {
  font-size: 26px;
  font-weight: 700;
  color: #1a1a1a;
  margin: 50px 0 20px 0;
  padding-bottom: 12px;
  border-bottom: 3px solid rgb(240, 177, 61);
}

.blog-content h3 {
  font-size: 20px;
  font-weight: 600;
  color: #333;
  margin: 35px 0 15px 0;
}

.blog-content h4 {
  font-size: 17px;
  font-weight: 600;
  color: #444;
  margin: 25px 0 12px 0;
}

.blog-content p {
  font-size: 16px;
  line-height: 1.9;
  color: #444;
  margin: 0 0 20px 0;
}

.blog-content ul, .blog-content ol {
  margin: 0 0 20px 0;
  padding-left: 24px;
}

.blog-content li {
  font-size: 16px;
  line-height: 1.8;
  color: #444;
  margin-bottom: 8px;
}

.note {
  font-size: 14px;
  color: #666;
  font-style: italic;
}

/* Boxes */
.intro-box {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  padding: 30px;
  border-radius: 12px;
  margin-bottom: 40px;
  border-left: 4px solid rgb(240, 177, 61);
}

.intro-box p {
  margin-bottom: 15px;
}

.intro-box p:last-child {
  margin-bottom: 0;
}

.toc-box {
  background: #fafafa;
  padding: 24px 30px;
  border-radius: 12px;
  margin-bottom: 40px;
  border: 1px solid #eee;
}

.toc-box h3 {
  font-size: 16px;
  margin: 0 0 15px 0;
  color: #1a1a1a;
}

.toc-box ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.toc-box li {
  margin-bottom: 8px;
}

.toc-box a {
  color: #555;
  text-decoration: none;
  font-size: 15px;
}

.toc-box a:hover {
  color: rgb(240, 177, 61);
}

.info-box {
  background: #f0f7ff;
  padding: 24px 30px;
  border-radius: 12px;
  margin: 30px 0;
  border: 1px solid #d0e3ff;
}

.info-box h3, .info-box h4 {
  color: #1a5fb4;
  margin-top: 0;
}

.highlight-box {
  background: linear-gradient(135deg, #fff9e6 0%, #fff3cc 100%);
  padding: 24px 30px;
  border-radius: 12px;
  margin: 30px 0;
  border: 1px solid #ffe066;
}

.highlight-box h4 {
  color: #b8860b;
  margin-top: 0;
}

.warning-box {
  background: #fff5f5;
  padding: 24px 30px;
  border-radius: 12px;
  margin: 30px 0;
  border: 1px solid #feb2b2;
}

.warning-box h4 {
  color: #c53030;
  margin-top: 0;
}

/* Flow */
.flow-box {
  background: #f8f9fa;
  padding: 30px;
  border-radius: 12px;
  margin: 30px 0;
}

.flow-box h3 {
  text-align: center;
  margin: 0 0 25px 0;
}

.flow-steps {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  gap: 10px;
}

.flow-step {
  background: white;
  padding: 20px;
  border-radius: 8px;
  text-align: center;
  border: 1px solid #e5e5e5;
  min-width: 140px;
}

.step-number {
  width: 32px;
  height: 32px;
  background: rgb(240, 177, 61);
  color: #1a1a1a;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  margin: 0 auto 10px;
}

.step-content h4 {
  margin: 0 0 5px 0;
  font-size: 14px;
}

.step-content p {
  margin: 0;
  font-size: 12px;
  color: #666;
}

.flow-arrow {
  font-size: 24px;
  color: #ccc;
}

/* Stats */
.stats-box {
  background: #1a1a1a;
  color: white;
  padding: 30px;
  border-radius: 12px;
  margin: 30px 0;
}

.stats-box h4 {
  text-align: center;
  margin: 0 0 20px 0;
  color: white;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
}

.stats-box .stat-item {
  text-align: center;
}

.stats-box .stat-number {
  display: block;
  font-size: 28px;
  font-weight: 700;
  color: rgb(240, 177, 61);
}

.stats-box .stat-label {
  display: block;
  font-size: 13px;
  opacity: 0.8;
  margin-top: 5px;
}

/* Table */
.comparison-table {
  overflow-x: auto;
  margin: 30px 0;
}

.comparison-table table {
  width: 100%;
  border-collapse: collapse;
  font-size: 15px;
}

.comparison-table th, .comparison-table td {
  padding: 14px 16px;
  text-align: left;
  border: 1px solid #e2e8f0;
}

.comparison-table th {
  background: #1a1a1a;
  color: white;
  font-weight: 600;
}

.comparison-table tr:nth-child(even) {
  background: #f8f9fa;
}

/* College Cards */
.college-cards {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 20px;
  margin: 30px 0;
}

.college-card {
  background: white;
  border: 1px solid #e5e5e5;
  border-radius: 12px;
  padding: 24px;
  transition: all 0.3s;
}

.college-card:hover {
  border-color: rgb(240, 177, 61);
  box-shadow: 0 8px 24px rgba(0,0,0,0.1);
}

.college-card h4 {
  margin: 0 0 5px 0;
  color: #1a1a1a;
}

.college-card .location {
  font-size: 13px;
  color: #888;
  margin: 0 0 15px 0;
}

.college-card ul {
  margin: 0;
  padding-left: 20px;
}

.college-card li {
  font-size: 14px;
  margin-bottom: 5px;
}

/* Timeline */
.timeline {
  position: relative;
  margin: 30px 0;
  padding-left: 30px;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 8px;
  top: 0;
  bottom: 0;
  width: 2px;
  background: #e5e5e5;
}

.timeline-item {
  position: relative;
  margin-bottom: 30px;
  padding-left: 30px;
}

.timeline-item::before {
  content: '';
  position: absolute;
  left: -26px;
  top: 5px;
  width: 12px;
  height: 12px;
  background: white;
  border: 2px solid #ccc;
  border-radius: 50%;
}

.timeline-item.highlight::before {
  background: rgb(240, 177, 61);
  border-color: rgb(240, 177, 61);
}

.timeline-period {
  font-size: 13px;
  font-weight: 600;
  color: rgb(240, 177, 61);
  margin-bottom: 8px;
}

.timeline-content {
  background: #f8f9fa;
  padding: 20px;
  border-radius: 8px;
}

.timeline-content h4 {
  margin: 0 0 10px 0;
  font-size: 16px;
}

.timeline-content ul {
  margin: 0;
  padding-left: 20px;
}

.timeline-content li {
  font-size: 14px;
  margin-bottom: 5px;
}

/* CTA */
.cta-box {
  background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  color: white;
  padding: 40px;
  border-radius: 16px;
  text-align: center;
  margin: 50px 0;
}

.cta-box h3 {
  color: white;
  margin: 0 0 15px 0;
  font-size: 22px;
}

.cta-box p {
  color: rgba(255,255,255,0.8);
  margin: 0 0 25px 0;
}

.cta-button {
  display: inline-block;
  padding: 14px 36px;
  background: rgb(240, 177, 61);
  color: #1a1a1a;
  text-decoration: none;
  border-radius: 8px;
  font-weight: 600;
  font-size: 16px;
  transition: all 0.3s;
}

.cta-button:hover {
  background: #e6a832;
  transform: translateY(-2px);
}

/* Related */
.related-articles {
  background: #f8f9fa;
  padding: 30px;
  border-radius: 12px;
  margin-top: 50px;
}

.related-articles h3 {
  margin: 0 0 20px 0;
  font-size: 18px;
}

.related-articles ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.related-articles li {
  margin-bottom: 12px;
}

.related-articles a {
  color: #1a5fb4;
  text-decoration: none;
  font-size: 15px;
}

.related-articles a:hover {
  text-decoration: underline;
}

/* Responsive */
@media (max-width: 768px) {
  .article-header {
    padding: 60px 20px;
  }

  .article-title {
    font-size: 26px;
  }

  .article-subtitle {
    font-size: 16px;
  }

  .article-body {
    padding: 40px 16px;
  }

  .blog-content h2 {
    font-size: 22px;
  }

  .flow-steps {
    flex-direction: column;
  }

  .flow-arrow {
    transform: rotate(90deg);
  }

  .stats-grid {
    grid-template-columns: 1fr;
  }

  .college-cards {
    grid-template-columns: 1fr;
  }

  .cta-box {
    padding: 30px 20px;
  }
}
</style>
